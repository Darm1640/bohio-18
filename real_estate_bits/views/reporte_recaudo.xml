<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_recaudo_line">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: Arial, sans-serif;">
                        <!-- Encabezado -->
                        <div class="row">
                            <br/>
                            <div class="col-6">
                                <strong>Cliente:</strong> <span t-field="o.partner_id.name"/><br/>
                                <strong>NIT ó C.C:</strong> <span t-field="o.partner_id.vat"/><br/>
                                <strong>Teléfono:</strong> <span t-field="o.partner_id.phone"/>
                            </div>
                            <div class="col-6 text-right">
                                <h4 style="color: #FF0000;"><t t-esc="o.document_type"/></h4>
                                <h4><t t-esc="o.name"/></h4>
                                 <h4>Fecha: <t t-esc="o.date"/></h4>
                            </div>
                        </div>
                        <!-- Observaciones -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Observaciones:</strong> <span t-field="o.notes"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Forma de pago:</strong> <span t-field="o.journal_id"/>
                            </div>
                        </div>

                        <!-- Detalles del pago -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <table class="table table-sm table-bordered">
                                    <thead style="background-color: #FF0000; color: white;">
                                        <tr>
                                            <th>No.</th>
                                            <th>Descripción</th>
                                            <th class="text-right">Valor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="counter" t-value="1"/>
                                        
                                        <!-- Conceptos con factura -->
                                        <t t-foreach="o.report_get_grouped_concepts()['invoiced']" t-as="invoice">
                                            <tr>
                                                <td><t t-esc="counter"/></td>
                                                <td><t t-esc="invoice['concept_names']"/></td>
                                                <td class="text-right">
                                                    <span t-esc="invoice['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                </td>
                                            </tr>
                                            <t t-set="counter" t-value="counter + 1"/>
                                            
                                        </t>
                                        
                                        <!-- Conceptos generales -->
                                        <t t-if="o.report_get_grouped_concepts()['general']">
                                            <t t-foreach="o.report_get_grouped_concepts()['general']" t-as="concept">
                                                <tr>
                                                    <td><t t-esc="counter"/></td>
                                                    <td><t t-esc="concept['name']"/></td>
                                                    <td class="text-right">
                                                        <span t-esc="concept['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                                <t t-set="counter" t-value="counter + 1"/>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Totales -->
                        <div class="row">
                            <div class="col-6">
                                <p>MARIA ALEJANDRA CAVADIA MORENO</p>
                                <div class="mt-4">
                                    <p>Elaboró: _______________________</p>
                                    <p>Recibí Conforme: _______________________</p>
                                </div>
                            </div>
                            <div class="col-6">
                                <t t-if="o.destinatario == 'propietario'">
                                    <t t-set="resumen" t-value="o.report_get_propietario_resumen()"/>
                                    <table class="table table-sm">
                                        <tbody>
                                            <t t-foreach="resumen['lineas_agrupadas'].items()" t-as="linea">
                                                <tr>
                                                    <td><t t-esc="linea[0]"/></td>
                                                    <td class="text-right">
                                                        <span t-esc="linea[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-foreach="resumen['impuestos'].items()" t-as="impuesto">
                                                <tr>
                                                    <td><t t-esc="impuesto[0]"/></td>
                                                    <td class="text-right">
                                                        <span t-esc="impuesto[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="resumen['comision']">
                                                <tr>
                                                    <td>Comisión</td>
                                                    <td class="text-right">
                                                        <span t-esc="resumen['comision']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="resumen['novedades']">
                                                <tr>
                                                    <td>Novedades</td>
                                                    <td class="text-right">
                                                        <span t-esc="resumen['novedades']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr class="border-black">
                                                <td><strong>Total a Pagar</strong></td>
                                                <td class="text-right">
                                                    <strong><span t-esc="resumen['total_pagar']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></strong>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                
                                <t t-if="o.destinatario == 'arrendatario'">
                                    <t t-set="resumen" t-value="o.report_get_arrendatario_resumen()"/>
                                    <table class="table table-sm">
                                        <tbody>
                                            <t t-foreach="resumen['lineas_agrupadas'].items()" t-as="linea">
                                                <tr>
                                                    <td><t t-esc="linea[0]"/></td>
                                                    <td class="text-right">
                                                        <span t-esc="linea[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="resumen['novedades']">
                                                <tr>
                                                    <td>Novedades</td>
                                                    <td class="text-right">
                                                        <span t-esc="resumen['novedades']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr class="border-black">
                                                <td><strong>Total a Cobrar</strong></td>
                                                <td class="text-right">
                                                    <strong><span t-esc="resumen['total_pagar']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></strong>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>    
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <record id="action_report_recaudo_line" model="ir.actions.report">
        <field name="name">Imprimir Comprobante</field>
        <field name="model">recaudo.line</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">real_estate_bits.report_recaudo_line</field>
        <field name="report_file">real_estate_bits.report_recaudo_line</field>
        <field name="binding_model_id" ref="model_recaudo_line"/>
        <field name="binding_type">report</field>
    </record>
</odoo>