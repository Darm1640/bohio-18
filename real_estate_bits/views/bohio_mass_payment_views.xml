<?xml version="1.0" encoding="utf-8"?>
<data>

    <!-- Vista Form Principal - Estilo Survey Progresivo -->
    <record id="view_bohio_mass_payment_form" model="ir.ui.view">
        <field name="name">bohio.mass.payment.form</field>
        <field name="model">bohio.mass.payment</field>
        <field name="arch" type="xml">
            <form string="Bohío - Pago Masivo" class="o_survey_form o_form_nosheet">
                <field name="state" invisible="1"/>

                <header>
                    <button name="action_simulate" type="object" string="Simular"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_confirm" type="object" string="Confirmar"
                            class="oe_highlight" invisible="state != 'simulated'"/>
                    <button name="action_process_payments" type="object" string="Procesar"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_create_payment_from_selection" type="object" string="Pagar Selección"
                            class="btn-warning" invisible="state not in ['simulated', 'confirmed']"/>
                    <button name="action_create_debit_note" type="object" string="Nota Débito"
                            class="btn-info" invisible="state not in ['simulated', 'confirmed']"/>
                    <button name="action_show_tax_income_balance" type="object" string="Balance"
                            class="btn-secondary" invisible="state not in ['simulated', 'confirmed', 'processed']"/>
                    <button name="action_reset_to_draft" type="object" string="Reiniciar"
                            invisible="state in ['draft', 'processed']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,simulated,confirmed,processed"/>
                </header>

                <!-- Survey Style Container -->
                <div class="wrap o_survey_wrap">
                    <div class="o_container_small o_survey_form">

                        <!-- Header tipo Survey -->
                        <div class="o_survey_nav pt16 mb-4">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12 text-center">
                                        <h1 class="o_survey_main_title pt-4">
                                            <i class="fa fa-calculator"/> Pago Masivo <field name="name" readonly="1" style="background: transparent; border: none;"/>
                                        </h1>
                                        <p class="lead text-muted">
                                            <i class="fa fa-users"/> Simulador inteligente de pagos para múltiples propietarios
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Progress Steps tipo Survey -->
                        <div class="o_survey_breadcrumb_container mb-4" invisible="state == 'draft'">
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: 25%;"
                                     invisible="state not in ['simulated', 'confirmed', 'processed']"></div>
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;"
                                     invisible="state not in ['confirmed', 'processed']"></div>
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%;"
                                     invisible="state != 'processed'"></div>
                            </div>
                            <div class="row text-center mt-2">
                                <div class="col-3">
                                    <small class="text-muted">
                                        <span class="badge bg-primary" invisible="state not in ['simulated', 'confirmed', 'processed']">✓</span>
                                        Configurar
                                    </small>
                                </div>
                                <div class="col-3">
                                    <small class="text-muted">
                                        <span class="badge bg-warning" invisible="state not in ['confirmed', 'processed']">✓</span>
                                        Simular
                                    </small>
                                </div>
                                <div class="col-3">
                                    <small class="text-muted">
                                        <span class="badge bg-warning" invisible="state != 'processed'">✓</span>
                                        Confirmar
                                    </small>
                                </div>
                                <div class="col-3">
                                    <small class="text-muted">
                                        <span class="badge bg-success" invisible="state != 'processed'">✓</span>
                                        Procesar
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- PÁGINA 1: Configuración (Estilo Survey) -->
                        <div class="o_survey_page_header" invisible="state != 'draft'">
                            <h2 class="o_survey_page_title">
                                Paso 1: Configuración Inicial
                            </h2>
                            <p class="text-muted">Configure los parámetros básicos de la simulación</p>
                        </div>

                        <div class="o_survey_question_wrapper" invisible="state != 'draft'">
                            <!-- Información de Proceso -->
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-info-circle"/> Información de Proceso</h3>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="date" class="fw-bold o_form_label">Fecha de Proceso</label>
                                            <field name="date" class="form-control"/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="simulation_month" class="fw-bold o_form_label">Mes a Simular</label>
                                            <field name="simulation_month" class="form-control"
                                                   placeholder="Seleccione el mes..."/>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="journal_id" class="fw-bold o_form_label">Diario de Pagos</label>
                                            <field name="journal_id" class="form-control"
                                                   placeholder="Seleccione el diario..."/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Filtros Geográficos -->
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-map-marker"/> ¿En qué regiones desea procesar pagos?</h3>
                                <p class="text-muted">Seleccione las ubicaciones geográficas</p>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="region_ids" class="fw-bold o_form_label">Regiones</label>
                                        <field name="region_ids" widget="many2many_tags"
                                               placeholder="Todas las regiones..."
                                               class="form-control"/>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="city_ids" class="fw-bold o_form_label">Ciudades</label>
                                        <field name="city_ids" widget="many2many_tags"
                                               placeholder="Todas las ciudades..."
                                               class="form-control"/>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="project_ids" class="fw-bold o_form_label">Proyectos</label>
                                        <field name="project_ids" widget="many2many_tags"
                                               placeholder="Todos los proyectos..."
                                               class="form-control"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Filtros de Terceros -->
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-users"/> ¿Qué tipo de terceros incluir?</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <field name="partner_type_filter" widget="radio"
                                               class="o_survey_form_field_radio"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="partner_tag_ids" class="fw-bold o_form_label">Etiquetas Específicas</label>
                                        <field name="partner_tag_ids" widget="many2many_tags"
                                               placeholder="Filtrar por etiquetas..."
                                               class="form-control"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Conceptos a Incluir -->
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-cogs"/> ¿Qué conceptos incluir en la simulación?</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check mb-3">
                                            <field name="include_overdue" widget="boolean_toggle"/>
                                            <label for="include_overdue" class="form-check-label fw-bold o_form_label">
                                                Incluir Morosos (intereses por mora)
                                            </label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <field name="include_novelties" widget="boolean_toggle"/>
                                            <label for="include_novelties" class="form-check-label fw-bold o_form_label">
                                                Incluir Novedades (gastos, descuentos)
                                            </label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <field name="include_loans" widget="boolean_toggle"/>
                                            <label for="include_loans" class="form-check-label fw-bold o_form_label">
                                                Incluir Préstamos (descuentos automáticos)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="contract_ids" class="fw-bold o_form_label">Contratos Específicos (Opcional)</label>
                                        <field name="contract_ids" widget="many2many_tags"
                                               placeholder="Dejar vacío para usar filtros..."
                                               class="form-control"/>
                                        <small class="text-muted">Si especifica contratos, se ignorarán los demás filtros</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Configuración de Proceso -->
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-cog"/> ¿Cómo desea procesar los pagos?</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check mt-4">
                                            <field name="separate_payments" widget="boolean_toggle"/>
                                            <label for="separate_payments" class="form-check-label fw-bold o_form_label">
                                                Pagos Separados por Propietario
                                            </label>
                                            <small class="text-muted d-block">Recomendado para privacidad en portal</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check mt-4">
                                            <field name="auto_post" widget="boolean_toggle"/>
                                            <label for="auto_post" class="form-check-label fw-bold o_form_label">
                                                Auto-confirmar Pagos
                                            </label>
                                            <small class="text-muted d-block">Contabilizar automáticamente</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- PÁGINA 2: Resultados de Simulación -->
                        <div class="o_survey_page_header" invisible="state == 'draft'">
                            <h2 class="o_survey_page_title">
                                Paso 2: Resultados de la Simulación
                            </h2>
                            <p class="text-muted" invisible="state != 'simulated'">Simulación completada. Revise los resultados y confirme</p>
                            <p class="text-muted" invisible="state != 'confirmed'">Simulación confirmada. Procese los pagos</p>
                            <p class="text-muted" invisible="state != 'processed'">Pagos procesados exitosamente</p>
                        </div>

                        <!-- Dashboard de Resultados -->
                        <div class="o_survey_question_wrapper" invisible="state == 'draft'">
                            <div class="o_survey_question mb-4">
                                <h3 class="o_survey_question_title"><i class="fa fa-bar-chart"/> Resumen Financiero</h3>
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-primary text-white">
                                            <div class="fs-2 fw-bold">
                                                <field name="total_canon" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">Canon Total</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-warning text-dark">
                                            <div class="fs-2 fw-bold">
                                                <field name="total_commission" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">Comisiones</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-info text-white">
                                            <div class="fs-2 fw-bold">
                                                <field name="total_taxes" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">Impuestos</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-secondary text-white">
                                            <div class="fs-2 fw-bold">
                                                <field name="total_novelties" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">Novedades</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-danger text-white">
                                            <div class="fs-2 fw-bold">
                                                <field name="total_interest" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">Intereses</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="text-center p-3 border rounded bg-success text-white">
                                            <div class="fs-1 fw-bold">
                                                <field name="total_to_pay" widget="monetary"/>
                                            </div>
                                            <div class="fs-6">TOTAL NETO</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Detalle por Propietario -->
                            <div class="o_survey_question">
                                <h3 class="o_survey_question_title"><i class="fa fa-list"/> Detalle por Propietario</h3>
                                <p class="text-muted">Revise y seleccione las líneas a procesar</p>

                                <field name="simulation_line_ids" readonly="state == 'processed'">
                                    <list string="Líneas de Simulación" editable="bottom"
                                          decoration-success="not skip_payment and not processed"
                                          decoration-muted="skip_payment or processed"
                                          decoration-warning="paid_percentage &gt; 0 and paid_percentage &lt; 100"
                                          decoration-info="selected">

                                        <!-- Controles -->
                                        <field name="selected" widget="boolean_toggle" readonly="processed"/>
                                        <field name="skip_payment" widget="boolean_toggle" readonly="processed"/>

                                        <!-- Información Principal -->
                                        <field name="partner_id" readonly="1"/>
                                        <field name="contract_id" readonly="1"/>
                                        <field name="partner_percentage" readonly="1" string="% Part."/>

                                        <!-- Montos Detallados -->
                                        <field name="canon_amount" widget="monetary" readonly="1"
                                               decoration-bf="1" sum="Canon"/>
                                        <field name="paid_canon" widget="monetary"
                                               decoration-info="paid_canon &gt; 0"/>
                                        <field name="paid_percentage" widget="percentage" readonly="1"
                                               decoration-warning="paid_percentage &gt; 0 and paid_percentage &lt; 100"
                                               decoration-success="paid_percentage == 100"/>

                                        <field name="commission_amount" widget="monetary" readonly="1"
                                               sum="Comisión"/>
                                        <field name="tax_amount" widget="monetary" readonly="1"
                                               sum="Impuestos"/>
                                        <field name="novelty_amount" widget="monetary" readonly="1"
                                               sum="Novedades"/>
                                        <field name="loan_amount" widget="monetary" readonly="1"
                                               sum="Préstamos"/>
                                        <field name="interest_amount" widget="monetary" readonly="1"
                                               sum="Intereses"/>

                                        <!-- Total Final -->
                                        <field name="net_to_pay" widget="monetary" readonly="1"
                                               decoration-bf="1" sum="Total Neto"
                                               decoration-success="net_to_pay &gt; 0"
                                               decoration-danger="net_to_pay &lt; 0"/>

                                        <!-- Estado y Observaciones -->
                                        <field name="processed" readonly="1" widget="boolean_toggle"/>
                                        <field name="notes" placeholder="Observaciones..."/>

                                        <!-- Campos Ocultos -->
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="region_id" column_invisible="1"/>
                                        <field name="project_id" column_invisible="1"/>
                                    </list>
                                </field>
                            </div>

                            <!-- Notas Débito -->
                            <div class="o_survey_question mt-4" invisible="not debit_note_ids">
                                <h3 class="o_survey_question_title"><i class="fa fa-file-text-o"/> Notas Débito Creadas</h3>
                                <field name="debit_note_ids" readonly="state == 'processed'">
                                    <list string="Notas Débito">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="contract_id"/>
                                        <field name="concept"/>
                                        <field name="amount_total" widget="monetary" sum="Total"/>
                                        <field name="state"
                                               decoration-warning="state == 'draft'"
                                               decoration-info="state == 'confirmed'"
                                               decoration-success="state == 'invoiced'"
                                               widget="badge"/>
                                    </list>
                                </field>
                            </div>

                            <!-- Pagos Creados -->
                            <div class="o_survey_question mt-4" invisible="not payment_ids">
                                <h3 class="o_survey_question_title"><i class="fa fa-credit-card"/> Pagos Procesados</h3>
                                <field name="payment_ids" readonly="1">
                                    <list string="Pagos">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount" widget="monetary" sum="Total"/>
                                        <field name="date"/>
                                        <field name="state"
                                               decoration-info="state == 'draft'"
                                               decoration-success="state == 'posted'"
                                               widget="badge"/>
                                    </list>
                                </field>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista List/Tree -->
    <record id="view_bohio_mass_payment_tree" model="ir.ui.view">
        <field name="name">bohio.mass.payment.list</field>
        <field name="model">bohio.mass.payment</field>
        <field name="arch" type="xml">
            <list string="Pagos Masivos"
                  decoration-muted="state == 'draft'"
                  decoration-info="state == 'simulated'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'processed'"
                  decoration-danger="state == 'cancelled'">

                <field name="name" decoration-bf="1"/>
                <field name="simulation_month" widget="date"/>
                <field name="total_to_pay" widget="monetary" sum="Total"/>
                <field name="state"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'simulated'"
                       decoration-warning="state == 'confirmed'"
                       decoration-success="state == 'processed'"
                       decoration-danger="state == 'cancelled'"
                       widget="badge"/>
                <field name="date"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_bohio_mass_payment_search" model="ir.ui.view">
        <field name="name">bohio.mass.payment.search</field>
        <field name="model">bohio.mass.payment</field>
        <field name="arch" type="xml">
            <search string="Buscar Pagos Masivos">
                <field name="name" string="Número"/>
                <field name="simulation_month" string="Mes"/>
                <field name="region_ids" string="Región"/>
                <field name="project_ids" string="Proyecto"/>

                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Simulados" name="simulated" domain="[('state', '=', 'simulated')]"/>
                <filter string="Confirmados" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Procesados" name="processed" domain="[('state', '=', 'processed')]"/>

                <separator/>

                <group expand="1" string="Agrupar Por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Mes" name="group_month" context="{'group_by': 'simulation_month'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban estilo Survey -->
    <record id="view_bohio_mass_payment_kanban" model="ir.ui.view">
        <field name="name">bohio.mass.payment.kanban</field>
        <field name="model">bohio.mass.payment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column o_survey_kanban">
                <field name="name"/>
                <field name="simulation_month"/>
                <field name="total_to_pay"/>
                <field name="state"/>
                <field name="date"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="card" class="o_survey_kanban_card">
                        <main class="o_kanban_card_content">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="text-muted">
                                        <field name="simulation_month" widget="date"/>
                                    </div>
                                </div>
                            </div>

                            <div class="container mt-3">
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <h3 class="text-primary">
                                            <field name="total_to_pay" widget="monetary"/>
                                        </h3>
                                        <p class="text-muted">Total a Pagar</p>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_card_footer">
                                <div class="text-muted">
                                    <field name="date"/>
                                </div>
                                <div class="float-end">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'draft': 'secondary', 'simulated': 'info', 'confirmed': 'warning', 'processed': 'success', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción Principal -->
    <record id="action_bohio_mass_payment" model="ir.actions.act_window">
        <field name="name">Pago Masivo Bohío</field>
        <field name="res_model">bohio.mass.payment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            'search_default_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Cree su primer pago masivo!
            </p>
            <p>
                El sistema de pagos masivos le permite simular y procesar
                pagos para múltiples propietarios de manera eficiente.
            </p>
        </field>
    </record>

    <!-- ================================ -->
    <!-- MENÚS DE FLUJO DE TRABAJO -->
    <!-- ================================ -->

    <!-- Menú Padre: Pagos Masivos -->
    <menuitem id="menu_bohio_mass_payment_root"
              name="Pagos Masivos"
              parent="real_estate_bits.menu_real_estate_root"
              sequence="25"/>

    <!-- 1. Borradores -->
    <record id="action_bohio_mass_payment_draft" model="ir.actions.act_window">
        <field name="name">Borradores</field>
        <field name="res_model">bohio.mass.payment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'draft')]</field>
        <field name="context">{
            'default_state': 'draft',
            'search_default_group_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay borradores de pagos masivos
            </p>
            <p>
                Cree un nuevo pago masivo para comenzar a simular pagos a propietarios.
            </p>
        </field>
    </record>

    <menuitem id="menu_bohio_mass_payment_draft"
              name="Borradores"
              parent="menu_bohio_mass_payment_root"
              action="action_bohio_mass_payment_draft"
              sequence="10"/>

    <!-- 2. Simulados -->
    <record id="action_bohio_mass_payment_simulated" model="ir.actions.act_window">
        <field name="name">Simulados</field>
        <field name="res_model">bohio.mass.payment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('state', '=', 'simulated')]</field>
        <field name="context">{
            'search_default_group_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay pagos simulados
            </p>
            <p>
                Los pagos simulados están listos para ser revisados y confirmados.
            </p>
        </field>
    </record>

    <menuitem id="menu_bohio_mass_payment_simulated"
              name="Simulados"
              parent="menu_bohio_mass_payment_root"
              action="action_bohio_mass_payment_simulated"
              sequence="20"/>

    <!-- 3. Confirmados -->
