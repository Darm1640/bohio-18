<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_recaudo_form" model="ir.ui.view">
            <field name="name">recaudo.recaudo.form</field>
            <field name="model">recaudo.recaudo</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_pending" string="Marcar como pendiente" type="object" invisible="state !=  'draft'" />
                        <button name="action_paid" string="Marcar como pagado" type="object"  invisible="state !=  'pending'" />
                        <button name="generate_recaudo_lines" string="Generar" type="object" invisible="state !=  'pending'"/>
                        <button name="action_reverse" string="Revertir" type="object"   invisible="state != 'paid'" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="journal_id" />
                            </group>
                            <group>
                                <field name="operation_type" />
                                <field name="reference" />
                                <field name="user_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Contratos">
                                <field name="contract_ids" />
                                <button name="action_load_contracts" string="Seleccionar contratos"
                                    type="object" class="oe_highlight" />
                            </page>
                            <page string="Líneas de recaudo">
                                <field name="line_ids">
                                    <list>
                                        <field name="partner_id" />
                                        <field name="contract_id" />
                                        <field name="percentage" />
                                        <field name="is_paid" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="notes" />
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <record id="view_generate_interest_invoice_wizard_form" model="ir.ui.view">
            <field name="name">generate.interest.invoice.wizard.form</field>
            <field name="model">generate.interest.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Factura de Intereses">
                    <group>
                        <field name="journal_id"/>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="recaudo_line_ids" widget="many2many_tags"/>
                        <field name="tax_ids" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="action_generate_invoice" string="Generar Factura" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    
        <record id="action_generate_interest_invoice" model="ir.actions.act_window">
            <field name="name">Generar Factura de Intereses</field>
            <field name="res_model">generate.interest.invoice.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- Vista de formulario para Línea de Recaudo -->
        <record id="view_recaudo_line_form" model="ir.ui.view">
            <field name="name">recaudo.line.form</field>
            <field name="model">recaudo.line</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="load_invoices" string="Marcar como pendiente" type="object" invisible="state !=  'draft'" />
                        <button name="load_novedades" string="Marcar como pagado" type="object"  invisible="state !=  'draft'" />
                        <button name="process_line" string="procesar" type="object"  invisible="state !=  'draft'"   />
                        <button name="%(action_generate_interest_invoice)d" string="Generar Factura de Intereses" type="action" icon="fa-file-text-o" invisible="destinatario == 'propietario'"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label">
                                <field name="document_type" readonly="1" nolabel="1"/>
                            </span>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="contract_id" />
                                <field name="contract_partner_ids"  invisible="True" />
                                <field name="company_id"  invisible="True" />
                                <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1, 'default_is_company': True, 'show_vat': True}" domain="[('id', 'in', contract_partner_ids)]"/>
                                <field name="percentage" invisible="True" />
                                <field name="destinatario" />
                                <field name="move_id" />
                                <field name="interest_invoice_id" />
                                <field name="date_from" />
                                <field name="date_to" />
                                <field name="journal_id" />
                            </group>
                            <group>
                                <field name="is_paid" invisible="True" />
                                <field name="reference" />
                                <field name="notes" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Conceptos">
                                <field name="concept_ids">
                                    <list editable="bottom" 
                                        decoration-success="invoice_id and amount &gt; 0" 
                                        decoration-danger="invoice_id and amount &lt; 0" 
                                        decoration-warning="concept == 'novelty'"
                                        decoration-info="concept == 'other'">
                                        <field name="name" />
                                        <field name="invoice_id" column_invisible="1"/>
                                        <field name="concept" optional="hide"/>
                                        <field name="account_id" optional="hide" />
                                        <field name="amount" sum="Total"/>
                                        <field name="day_inte" />
                                        <field name="amount_intereses" sum="Total"/>
                                        <field name="days_overdue" optional="hide"/>
                                        <field name="nota_debito_actual" optional="hide"/>
                                        <field name="product_id" column_invisible="1"/>
                                        <field name="tax_line_id" column_invisible="1"/>
                                        <field name="invoice_id" string="Factura" optional="hide"/>
                                        <field name="product_id" string="Producto" optional="hide"/>
                                        <field name="tax_line_id" string="Impuesto" optional="hide"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <field name="resumen_html" widget="html" nolabel="1"/>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vista de  para Recaudo -->
        <record id="view_recaudo_tree" model="ir.ui.view">
            <field name="name">recaudo.recaudo.</field>
            <field name="model">recaudo.recaudo</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="state" />
                    <field name="user_id" />
                </list>
            </field>
        </record>

        <!-- Vista de Kanban para Recaudo -->
        <record id="view_recaudo_kanban" model="ir.ui.view">
            <field name="name">recaudo.recaudo.kanban</field>
            <field name="model">recaudo.recaudo</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="state" />
                    <field name="user_id" />
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_global_click o_kanban_record oe_kanban_color_{{kanban_getcolor(record.state.raw_value)}}"
                                t-att-data-id="record.id.raw_value">
                                <div class="o_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div>
                                        <field name="date_from" />
                                        <field name="date_to" />
                                    </div>
                                    <div>
                                        <field name="user_id" />
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="o_tag">
                                        <field name="state"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acción para Recaudo -->
        <record id="action_recaudo" model="ir.actions.act_window">
            <field name="name">Recaudos</field>
            <field name="res_model">recaudo.recaudo</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click en crear para registrar un nuevo recaudo.
                </p>
            </field>
        </record>

        <!-- Menú para Recaudo -->


        <!-- Vista de  para Línea de Recaudo -->
        <record id="view_recaudo_line_tree" model="ir.ui.view">
            <field name="name">recaudo.line.</field>
            <field name="model">recaudo.line</field>
            <field name="arch" type="xml">
                <list>
                    <field name="partner_id" />
                    <field name="contract_id" />
                    <field name="percentage" />
                    <field name="is_paid" />
                </list>
            </field>
        </record>

        <!-- Acción para Línea de Recaudo -->
        <record id="action_recaudo_line" model="ir.actions.act_window">
            <field name="name">Líneas de Recaudo</field>
            <field name="res_model">recaudo.line</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click en crear para registrar una nueva línea de recaudo.
                </p>
            </field>
        </record>

        <!-- Menú para Línea de Recaudo -->


    </data>
</odoo>