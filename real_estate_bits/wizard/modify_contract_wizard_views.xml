<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del wizard de modificar contrato -->
        <record id="view_modify_contract_wizard_form" model="ir.ui.view">
            <field name="name">modify.contract.wizard.form</field>
            <field name="model">modify.contract.wizard</field>
            <field name="arch" type="xml">
                <form string="Modificar Contrato" class="o_contract_wizard">
                    <header>
                        <button name="action_execute_operation"
                                string="Aplicar Modificación"
                                type="object"
                                class="btn-primary oe_highlight"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </header>

                    <sheet>
                        <!-- Campos invisibles necesarios -->
                        <field name="currency_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>

                        <div class="o_wizard_header">
                            <h2><i class="bi bi-pencil"></i> Modificar Contrato</h2>
                            <h4 class="text-muted">
                                <field name="contract_id" readonly="1" options="{'no_open': True}"/>
                            </h4>
                        </div>

                        <!-- Información actual del contrato -->
                        <div class="alert alert-info">
                            <h5><i class="bi bi-info-circle"></i> Información Actual</h5>
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>Fecha Fin:</strong><br/>
                                    <field name="current_end_date" readonly="1"/>
                                </div>
                                <div class="col-md-3">
                                    <strong>Canon Actual:</strong><br/>
                                    <field name="current_rental_fee" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </div>
                                <div class="col-md-3">
                                    <strong>Facturas Pendientes:</strong><br/>
                                    <field name="pending_invoices" readonly="1"/>
                                </div>
                                <div class="col-md-3">
                                    <strong>Monto Pendiente:</strong><br/>
                                    <field name="pending_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </div>
                            </div>
                        </div>

                        <!-- Selector de operación -->
                        <group>
                            <field name="modify_action" widget="radio"/>
                        </group>

                        <!-- Campos comunes -->
                        <group string="Información General">
                            <field name="reason" placeholder="Describa el motivo de esta operación..." required="True"/>
                            <field name="date" string="Fecha Efectiva"/>
                        </group>

                        <!-- Campos específicos por operación -->
                        <group string="Configuración de Extensión" invisible="modify_action != 'extend'">
                            <field name="extend_months"/>
                            <field name="new_end_date" required="modify_action == 'extend'"/>
                        </group>

                        <group string="Configuración de Renovación" invisible="modify_action != 'renew'">
                            <field name="new_end_date" required="modify_action == 'renew'"/>
                            <field name="new_rental_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="copy_conditions"/>
                        </group>

                        <group string="Modificación de Monto" invisible="modify_action != 'modify_amount'">
                            <field name="rental_increase_percentage"/>
                            <field name="new_rental_fee" widget="monetary" options="{'currency_field': 'currency_id'}" required="modify_action == 'modify_amount'"/>
                        </group>

                        <group string="Configuración de Cancelación" invisible="modify_action != 'cancel'">
                            <field name="cancellation_type" required="modify_action == 'cancel'"/>
                            <field name="apply_penalty"/>
                            <field name="penalty_amount" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="not apply_penalty"/>
                        </group>

                        <group string="Configuración de Suspensión" invisible="modify_action != 'pause'">
                            <field name="suspension_start" required="modify_action == 'pause'"/>
                            <field name="suspension_end" required="modify_action == 'pause'"/>
                        </group>

                        <!-- Texto informativo -->
                        <div class="alert alert-warning" invisible="not informational_text">
                            <field name="informational_text" nolabel="1"/>
                        </div>

                        <!-- Advertencia para cancelación -->
                        <div class="alert alert-danger" invisible="modify_action != 'cancel' or pending_invoices == 0">
                            <i class="fa fa-warning"></i> <strong>Advertencia:</strong>
                            Este contrato tiene facturas pendientes. La cancelación eliminará líneas futuras no pagadas.
                        </div>

                        <!-- Campos adicionales -->
                        <group string="Observaciones" invisible="not name">
                            <field name="name" placeholder="Observaciones adicionales..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para el wizard -->
        <record id="action_modify_contract_wizard" model="ir.actions.act_window">
            <field name="name">Modificar Contrato</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">modify.contract.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>