<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="theme_common_footer2" inherit_id="website.layout" name="Footer Two" active="False">
       	<xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                <section id="footer_theme_common2" class="footer_theme_common2 o_footer">
                    <section class="top-footer pt48 pb48">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4 mb-3 mb-lg-0 col-md-6">
                                    <div class="block-footer">
                                        <div class="title-block-footer">
                                            <h5 class="content-title mb-3 ">About Store</h5>
                                        </div>
                                        <div class="content-block-footer">
                                            <ul class="contact-list">
                                                <li class="address-contact d-flex">
                                                    <p class="m-0"><span class="ri ri-home-2-line me-3"/></p>
                                                    <p class="m-0"><span t-out="res_company.street"/>,<span t-out="res_company.city"/>,<span t-out="res_company.zip"/></p>
                                                </li>
                                                <li class="address-contact d-flex">
                                                    <p class="m-0"><span class="ri ri-phone-line me-3"/></p>
                                                    <p class="m-0"><span t-out="res_company.phone"/></p>
                                                </li>
                                                <li class="address-contact d-flex">
                                                    <p class="m-0"><span class="ri ri-mail-send-line me-3"/></p>
                                                    <p class="m-0"><span t-out="res_company.email"/></p>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3 mb-lg-0 col-lg-2">
                                    <div class="footer-links">
                                        <h6 class="mb-3 ">USEFUL LINKS</h6>
                                        <p><a href="#">About Us</a></p>
                                        <p><a href="#">Contact</a></p>
                                        <p><a href="#">Shipping Return</a></p>
                                        <p><a href="#">FAQ</a></p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3 mb-lg-0 col-lg-2">
                                    <div class="footer-links">
                                        <h6 class="mb-3 ">INFORMATION</h6>
                                        <p><a href="#">My Account</a></p>
                                        <p><a href="#">Login</a></p>
                                        <p><a href="#">My Cart</a></p>
                                        <p><a href="#">Wishlist</a></p>
                                        <p><a href="#">Checkout</a></p>
                                    </div>
                                </div>
                                <div class="col-lg-4 mb-3 mb-lg-0 col-md-6">
                                    <div class="block-footer">
                                        <div class="title-block-footer">
                                            <h5 class="mb-3 ">Sign Up For Newsletter</h5>
                                        </div>
                                        <p class="newsletter-description ">Register your email for news and get special offers</p>
                                        <div class="block-subscribe-footer">
                                            <!-- <form class="input-group js_subscribe mt16" data-list-id="1">
                                                <input type="email" name="email" class="js_subscribe_value form-control bg-white" placeholder="Email Address"/>
                                                <span class="input-group-append">
                                                    <a role="button" href="#" class="btn btn-primary js_subscribe_btn h-100"><span class="ri ri-arrow-right-s-line"/></a>
                                                    <a role="button" href="#" class="btn btn-success js_subscribed_btn h-100 d-none" disabled="disabled"><span class="ri ri-check-line"/></a>
                                                </span>
                                            </form> -->
                                            <form class="s_newsletter_subscribe_form s_newsletter_list js_subscribe" data-vxml="001" data-list-id="2">
                                                <div class="js_subscribed_wrap d-none">
                                                    <p class="h4-fs text-center text-success js_subscribed_btn"><i class="fa fa-check-circle-o" role="img"/>Thanks for registering!</p>
                                                </div>
                                                <div class="js_subscribe_wrap">
                                                    <div class="input-group">
                                                        <input type="email" name="email" class="js_subscribe_value form-control" placeholder="Enter Your Email"/>
                                                        <span class="input-group-append">
                                                            <button role="button" class="btn btn-primary js_subscribe_btn h-100 o_submit"><span class="ri ri-arrow-right-s-line"/></button>
                                                        </span>
                                                    </div>
                                                </div>
                                            </form>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </section>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace">
			<div t-if="not no_copyright" class="o_footer_copyright footer2_copyright">
				<section class="copyright-section py-4">
                    <div class="container">
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <div class="mb-4 mb-md-0 footer-langage-option">
                                <p class="m-0 o_footer_copyright_name ">Â©<span t-field="res_company.name" /> 2023</p>
                            </div>
                            <div class="footer-logo">
                                <a href="/" class="navbar-brand logo p-0 m-0">
                                    <img src="/theme_snazzy/static/src/img/snazzy-logo-white.png" class="img-fluid"/>
                                </a>
                            </div>
                            <div class="">
                                <div class="payment-image text-md-end">
                                    <img src="/theme_snazzy/static/src/img/payment-footer-white.png" class="img-fluid"/>
                                </div>
                            </div>
                        </div>
                    </div>
				</section>
			</div>
		</xpath>
    </template>
</odoo>