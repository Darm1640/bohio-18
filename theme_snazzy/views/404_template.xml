<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="page_404_template" inherit_id="website.page_404">
		<xpath expr="//div[hasclass('container')]" position="replace">
			<div class="container">
				<div class="oe_structure">
					<div class="alert alert-info mt32">
						<p class="">This page does not exist, but you can create it as you are administrator of this site.</p>
						<a role="button" class="btn btn-info js_disable_on_click post_link" t-attf-href="/website/add/#{path}?redirect=1#{from_template and '&amp;template=%s' % from_template}">Create Page</a>
					</div>
					<div class="text-center text-muted p-3"><i class="fa fa-info-circle"></i> Edit the content below this line to adapt the default <strong>Page not found</strong> page.</div>
				</div>
			</div>
		</xpath>
	</template>
	
	<template id="404_template" inherit_id="http_routing.404">
		<xpath expr="//section[hasclass('s_text_image')]" position="replace">
			<section class="template_404_page">
				<img src="/theme_snazzy/static/src/img/404.jpg" class="img img-fluid"/>
			</section>
			<div class="oe_structure oe_empty m-0"/>
		</xpath>
	</template>

</odoo>
