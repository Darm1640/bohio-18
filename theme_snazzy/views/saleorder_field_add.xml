<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="store_location_field_form" model="ir.ui.view">
        <field name="name">store.location.field.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="store_location_id" readonly="state in ['cancel', 'sale']"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" bg_color="bg-success" title="Pickup Order" invisible="not store_location_id"/>
            </xpath>
        </field>
    </record>
</odoo>