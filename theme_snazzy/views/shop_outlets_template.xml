<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="shop_outlets_template" model="ir.ui.view">
		<field name="name">Shop Outlets</field>
		<field name="type">qweb</field>
		<field name="key">website.shop_outlets_template</field>
		<field name="arch" type="xml">
			<t name="Contact Us" t-name="theme_snazzy.shop_outlets_template">
				<t t-call="website.layout">
					<div class="oe_structure oe_empty" id="wrap">
					
						<section class="cart_banner_extra pt32">
							<div class="container">
								<div class="cart_banner_description text-center">
									<h3>
										<span>Our Outlets</span>
									</h3> 
									<ol class="breadcrumb justify-content-center">
										<li class="breadcrumb-item">
											<a href="/">Home</a>
										 </li>
									    <li class="breadcrumb-item active">
										   <span>Our Outlets</span>
									    </li>
									</ol>
								</div>
							</div>
						</section>
						<div class="oe_structure oe_empty"/>

						<section class="outlet_addresses pt40 pb40">
							<t t-set="store_data" t-value="request.env['store.location'].sudo().search([('is_published', '=', 'True')])"/>
							<div class="container">
								<div class="row">
									<t t-foreach="store_data" t-as="store">
										<div class="store-data col-md-4">
		                            		<div class="store-label p-3" t-attf-for="store-#{store.id}">
										    	<div class="store-content">
										        	<div class="store-details">
									        			<div class="store-name">
									        				<span t-out="store.name"></span>
									        			</div>
										        		<div class="store-address">
										        			
											          		<p class="detail-info mb-0">
											          			<span t-out="store.street"/>,<span t-out="store.street2"/>
											          		</p>
		                                        			<p class="detail-info">
		                                        				<span t-out="store.city"/>,<span t-out="store.zip"/>
		                                        			</p>
										        		</div>
										        	</div>
									        		<div class="store-contact d-flex">
									        			<t t-if="store.phone">
										        			<div class="contact-phone">
										        				<a t-attf-href="tel:#{store.phone}">
										        					<span class="ri ri-phone-fill align-middle" />
										        				</a>
										        			</div>
									        			</t>
									        			<t t-if="store.email">
										        			<div class="contact-email">
										        				<a t-attf-href="mailto:#{store.email}">
										        					<span class="ri ri-mail-fill align-middle"/>
										        				</a>
										        			</div>
										        		</t>
									        			<t t-if="store.location_url">
										        			<div class="contact-location">
										        				<a t-attf-href="#{store.location_url}" target="_blank">
										        					<span class="ri ri-map-pin-2-fill align-middle"/>
										        				</a>
										        			</div>
										        		</t>
									        		</div>
										      	</div>
										    </div>
		                            	</div>
									</t>
								</div>
							</div>
						</section>
						<div class="oe_structure oe_empty"/>

						<section class="outlet-contact pb96 pt32">
							<div class="container">
								<div class="row justify-content-center">
									<div class="col-xl-5 col-md-6 mb-4 mb-md-0">
										<div class="upper-content">
											<h3 class="title">Contact Us</h3>
											<p class="mb-4">Contact us about anything related to our services. We'll get back to you as soon as possible.</p>
											<p><span class="fa fa-phone me-2"></span><span>+1 (650) 691-3277</span></p>
											<p><span class="fa fa-envelope-o me-2"></span><span>info@bizople.com</span></p>
										</div>
										<div class="lower-content">
											<h6>Mon – Fri : 10:00 – 19:00</h6>
											<p><span>250 Executive Park Blvd, Suite 3400</span></p>
											<p><span>San Francisco, 94134</span></p>
										</div>
									</div>
									<div class="col-xl-6 col-md-6 offset-xl-1">
										<span class="hidden" data-for="contactus_form" t-att-data-values="{'email_to': res_company.email}" />
							            <div id="contactus_section">
                                            <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="background-image: none;">
                                                <div class="container">
                                                <form action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true" data-success-mode="redirect" data-success-page="/contactus-thank-you" data-model_name="crm.lead">
                                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_required col-lg-6" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="oiazj6vbn95">
                                                        <span class="s_website_form_label_content">Your Name</span>
                                                        <span class="s_website_form_mark">    *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="contact_name" required="1" value="" placeholder="Your Name*" id="oiazj6vbn95" />
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 col-lg-6" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="o4j8jppifpyd">
                                                        <span class="s_website_form_label_content">Phone Number</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="phone" value="" placeholder="Contact Number*" id="o4j8jppifpyd" />
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_required col-lg-6" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="o72sw62bwanm">
                                                        <span class="s_website_form_label_content">Your Email</span>
                                                        <span class="s_website_form_mark">    *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="email_from" required="1" value="" placeholder="Your Email*" id="o72sw62bwanm" />
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_required col-lg-6" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="odhb4w1cu2tv">
                                                        <span class="s_website_form_label_content">Your Company</span>
                                                        <span class="s_website_form_mark">      *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="partner_name" required="1" value="" placeholder="Your Company*" id="odhb4w1cu2tv" />
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="char" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="oln2vg87e76l">
                                                        <span class="s_website_form_label_content">Subject</span>
                                                        <span class="s_website_form_mark">      *</span>
                                                        </label>
                                                        <input type="text" class="form-control s_website_form_input" name="name" required="true" value="" placeholder="Subject*" id="oln2vg87e76l" />
                                                    </div>
                                                    <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="html" data-name="Field">
                                                        <label class="s_website_form_label d-none" style="width: 200px" for="o0b928y904lp9">
                                                        <span class="s_website_form_label_content">Your Question</span>
                                                        <span class="s_website_form_mark">    *</span>
                                                        </label>
                                                        <textarea class="form-control s_website_form_input" name="description" required="1" placeholder="Your Question*" id="o0b928y904lp9" rows="3"></textarea>
                                                    </div>
                                                    <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                                        <div style="" class="s_website_form_label"></div>
                                                        <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text">Submit</a>
                                                        <span id="s_website_form_result"></span>
                                                    </div>
                                                    </div>
                                                </form>
                                                </div>
                                            </section>
							            </div>
									</div>
								</div>
							</div>
						</section>
					</div>
				</t>
			</t>
		</field>
	</record>
	<record id="shop_outlets_template_menu" model="website.page">
		<field name="website_published">True</field>
		<field name="url">/outlets</field>
		<field name="view_id" ref="shop_outlets_template" />
	</record>
</odoo>