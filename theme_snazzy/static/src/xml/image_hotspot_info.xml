<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="theme_snazzy.static_image_hotspot_info">
    	<section class="static_image_hotspot_info position-absolute shadow bg-white">
			<div class="d-flex info-box align-items-center">
                <p class="hotspot-link mb-0"><a class="btn btn-primary" href="/shop"><span class="ri ri-shopping-cart-2-line text-white"></span></a></p>
				<div class="imahe-static-hotspot">
					<img src="/theme_snazzy/static/src/img/mobile-product.png" class="img img-fluid" style="max-width: 80px;"></img>
				</div>
				<div class="d-flex flex-column p-2" style="width: max-content; flex-wrap: wrap;">
					<p class="mb-1 hotspot-title">Smart Phone</p>
                    <p class="hotspot-sub-title mb-2"><span class="hotspot-price">$14.99 </span><span class="hotspot-discount text-decoration-line-through">$19.99</span></p>
					<div class="d-flex align-items-center">
                        <div class="snazzy-product-discount-label me-2">
                            <span class="snazzy-pro-label-disc"> 
                            -20%</span>
                        </div>
                        <div class="o_website_rating_static" t-att-style="inline_mode and 'display:inline'">
                            <span style="margin-left:2px;">4.0</span>
                            <t t-if="rating_avg">
                                <i class="fa fa-star text-warning" role="img"></i>
                            </t>
                            <t t-else="empty_star">
                                <i class="fa fa-star-o text-warning" role="img"></i>
                            </t>
                        </div>
                    </div>
				</div>
			</div>
           
		</section>
    </t>

    <t t-name="theme_snazzy.dynamic_image_hotspot_product_select">
        <div aria-hidden="true" aria-labelledby="myModalLabel" t-attf-class="modal#{technical ? ' o_technical_modal' : ''}#{fullscreen ? ' o_modal_full': ''}" contenteditable="False" role="dialog" style="z-index:1050">
            <div class="modal-dialog">
                <div class="modal-content" id="s_dynamic_hotspot_product_filter">
                    <div class="modal-header">
                        <h4 class="modal-title">Dynamic Hotspot</h4>
                        <button class="btn btn-close" data-bs-dismiss="modal" type="button"></button>
                        <!-- <button class="close" data-bs-dismiss="modal" type="button">x</button> -->
                    </div>
                    <div class="modal-body" contenteditable="false">
                        <form class="form-horizontal" role="form">
                            <div class="row">
                                <label class="col-sm-3 control-label" for="dynamic_hotspot_product">Select Product</label>
                                <div class="form-group col-sm-9">
                                    <select class="form-control" id="dynamic_hotspot_product" name="dynamic_hotspot_product"/>
                                </div>
                            </div>
                        </form>
                    </div>
                    
                    <div class="modal-footer">
                        <button class="btn btn-primary" data-bs-dismiss="modal" id="prod_sub_data">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>