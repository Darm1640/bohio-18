<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mybohio_owner_dashboard" name="BOHIO Owner Dashboard">
        <t t-call="bohio_real_estate.mybohio_portal_layout">
            <div class="mybohio-dashboard-owner">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2>Dashboard Propietario</h2>
                        <p class="text-muted">Bienvenido, <t t-esc="partner.name"/></p>
                    </div>
                </div>

                <!-- Metrics Cards -->
                <div class="row mb-4">
                    <!-- Total Propiedades -->
                    <div class="col-md-3">
                        <div class="card metric-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="text-muted mb-1">Total Propiedades</p>
                                        <h3 class="mb-0" t-esc="metrics['total_properties']"/>
                                    </div>
                                    <div class="metric-icon bg-primary">
                                        <i class="fa fa-building fa-2x text-white"></i>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <small class="text-success">
                                        <i class="fa fa-check-circle"></i>
                                        <t t-esc="metrics['occupied_properties']"/> Ocupadas
                                    </small>
                                    <small class="text-muted ms-2">
                                        <i class="fa fa-circle"></i>
                                        <t t-esc="metrics['vacant_properties']"/> Vacantes
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ocupación -->
                    <div class="col-md-3">
                        <div class="card metric-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="text-muted mb-1">Ocupación</p>
                                        <h3 class="mb-0"><t t-esc="'%.1f' % metrics['occupancy_rate']"/>%</h3>
                                    </div>
                                    <div class="metric-icon bg-success">
                                        <i class="fa fa-chart-pie fa-2x text-white"></i>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" role="progressbar"
                                             t-att-style="'width: %s%%' % metrics['occupancy_rate']"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ingreso Mensual -->
                    <div class="col-md-3">
                        <div class="card metric-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="text-muted mb-1">Ingreso Mensual</p>
                                        <h3 class="mb-0">
                                            <t t-esc="'${:,.0f}'.format(metrics['monthly_income'])"/>
                                        </h3>
                                    </div>
                                    <div class="metric-icon bg-warning">
                                        <i class="fa fa-dollar-sign fa-2x text-white"></i>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <small class="text-success">
                                        <i class="fa fa-arrow-up"></i>
                                        Recibido: $<t t-esc="'{:,.0f}'.format(metrics['income_received'])"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pendiente -->
                    <div class="col-md-3">
                        <div class="card metric-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <p class="text-muted mb-1">Pendiente</p>
                                        <h3 class="mb-0">
                                            <t t-esc="'${:,.0f}'.format(metrics['pending_amount'])"/>
                                        </h3>
                                    </div>
                                    <div class="metric-icon bg-danger">
                                        <i class="fa fa-exclamation-triangle fa-2x text-white"></i>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        Por cobrar
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Solicitar Crédito -->
                <t t-if="has_credit_limit">
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5><i class="fa fa-credit-card"></i> Crédito Disponible</h5>
                                        <p class="mb-0">Tiene cupo disponible de <strong>$<t t-esc="'{:,.0f}'.format(partner.credit_limit)"/></strong></p>
                                    </div>
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#creditRequestModal">
                                        Solicitar Crédito
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>

                <!-- Ingresos por Tipo de Propiedad y Promedio de Pagos -->
                <div class="row mb-4">
                    <!-- Ingresos por Tipo -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fa fa-chart-bar"></i> Ingresos por Tipo de Propiedad</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="metrics['income_by_type']">
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Tipo de Propiedad</th>
                                                    <th class="text-center">Cantidad</th>
                                                    <th class="text-end">Ingreso Mensual</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="metrics['income_by_type'].items()" t-as="type_data">
                                                    <tr>
                                                        <td>
                                                            <i t-att-class="'fa fa-%s text-primary me-2' % ('building' if type_data[0] in ['Apartamento', 'Casa'] else 'home' if type_data[0] == 'Lote' else 'warehouse')"></i>
                                                            <t t-esc="type_data[0]"/>
                                                        </td>
                                                        <td class="text-center">
                                                            <span class="badge bg-info" t-esc="type_data[1]['count']"/>
                                                        </td>
                                                        <td class="text-end">
                                                            <strong class="text-success">$<t t-esc="'{:,.0f}'.format(type_data[1]['total_income'])"/></strong>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                                <t t-else="">
                                    <p class="text-muted text-center py-3">No hay contratos activos</p>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Promedio de Pagos -->
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fa fa-calculator"></i> Promedio de Pagos</h5>
                            </div>
                            <div class="card-body text-center">
                                <h2 class="text-primary mb-3">
                                    $<t t-esc="'{:,.0f}'.format(metrics['avg_payment'])"/>
                                </h2>
                                <p class="text-muted mb-0">Promedio por pago recibido</p>
                                <hr/>
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle"></i>
                                        Basado en <strong t-esc="metrics['payments_this_month']"/> pago(s) este mes
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Propiedades Recientes -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Mis Propiedades</h5>
                                <a href="/mybohio/owner/properties" class="btn btn-sm btn-outline-primary">Ver Todas</a>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <t t-foreach="properties[:6]" t-as="prop">
                                        <div class="col-md-6">
                                            <a t-att-href="'/mybohio/owner/property/%s' % prop.id" class="text-decoration-none">
                                                <div class="card h-100 property-card shadow-sm">
                                                    <div class="card-body">
                                                        <h6 class="mb-2 fw-bold text-dark" t-field="prop.name"/>
                                                        <div class="d-flex align-items-center mb-2">
                                                            <i t-att-class="'fa fa-%s text-primary me-2' % ('building' if prop.property_type_id.name in ['Apartamento', 'Casa'] else 'home' if prop.property_type_id.name == 'Lote' else 'warehouse')"></i>
                                                            <small class="text-muted" t-esc="prop.property_type_id.name if prop.property_type_id else 'Sin tipo'"/>
                                                        </div>
                                                        <div class="mb-2">
                                                            <t t-if="prop.rental_price and prop.rental_price > 0">
                                                                <strong class="text-success">Arriendo: $<t t-esc="'{:,.0f}'.format(prop.rental_price)"/></strong>
                                                            </t>
                                                            <t t-elif="prop.list_price and prop.list_price > 0">
                                                                <strong class="text-primary">Venta: $<t t-esc="'{:,.0f}'.format(prop.list_price)"/></strong>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">Precio no definido</span>
                                                            </t>
                                                        </div>
                                                        <div>
                                                            <small class="text-muted">
                                                                <i class="fa fa-map-marker-alt"></i>
                                                                <t t-esc="prop.region_id.name if prop.region_id else 'Sin barrio'"/>
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Oportunidades Recientes -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Oportunidades</h5>
                                <a href="/mybohio/owner/opportunities" class="btn btn-sm btn-outline-primary">Ver Todas</a>
                            </div>
                            <div class="card-body">
                                <t t-if="opportunities">
                                    <div class="list-group list-group-flush">
                                        <t t-foreach="opportunities" t-as="opp">
                                            <a t-att-href="'/mybohio/owner/opportunity/%s' % opp.id" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1" t-field="opp.name"/>
                                                    <small>
                                                        <span t-att-class="'badge bg-%s' % ('success' if opp.stage_id.is_won else 'primary')"
                                                              t-field="opp.stage_id.name"/>
                                                    </small>
                                                </div>
                                            </a>
                                        </t>
                                    </div>
                                </t>
                                <t t-else="">
                                    <p class="text-muted text-center py-3">No hay oportunidades activas</p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Solicitar Crédito -->
                <div class="modal fade" id="creditRequestModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form method="POST" action="/mybohio/request_credit">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="modal-header">
                                    <h5 class="modal-title">Solicitar Crédito</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"/>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Monto Solicitado</label>
                                        <input type="number" class="form-control" name="amount" required="1"
                                               t-att-max="partner.credit_limit"/>
                                        <small class="text-muted">Cupo disponible: $<t t-esc="'{:,.0f}'.format(partner.credit_limit)"/></small>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Propósito</label>
                                        <textarea class="form-control" name="purpose" rows="3" required="1"/>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-primary">Solicitar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>