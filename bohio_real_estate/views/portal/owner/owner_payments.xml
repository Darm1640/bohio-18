<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mybohio_owner_payments" name="BOHIO Owner Payments">
        <t t-call="bohio_real_estate.mybohio_portal_layout">
            <div class="mybohio-payments-owner">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2>Pagos Recibidos</h2>
                        <p class="text-muted">Pagos de terceros y arrendatarios</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <t t-if="payments">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Referencia</th>
                                            <th>Origen</th>
                                            <th>Propiedad</th>
                                            <th class="text-end">Monto</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="payments" t-as="payment">
                                            <tr>
                                                <td>
                                                    <t t-esc="payment.date.strftime('%d/%m/%Y')"/>
                                                </td>
                                                <td>
                                                    <small t-esc="payment.ref or payment.name"/>
                                                </td>
                                                <td>
                                                    <t t-if="payment.contract_id">
                                                        <span class="badge bg-primary">
                                                            <i class="fa fa-file-contract"></i> Contrato
                                                        </span>
                                                        <br/>
                                                        <small class="text-muted" t-esc="payment.contract_id.partner_id.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-person"></i> Tercero
                                                        </span>
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="payment.contract_id">
                                                        <small t-esc="payment.contract_id.property_id.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        <small class="text-muted">-</small>
                                                    </t>
                                                </td>
                                                <td class="text-end">
                                                    <strong class="text-success">
                                                        $<t t-esc="'{:,.0f}'.format(payment.amount)"/>
                                                    </strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check"></i> Recibido
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>

                            <!-- PaginaciÃ³n -->
                            <t t-if="pager">
                                <t t-call="portal.pager"/>
                            </t>
                        </t>
                        <t t-else="">
                            <div class="alert alert-info text-center">
                                <i class="bi bi-info-circle"></i> No hay pagos registrados
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>