<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mybohio_owner_properties" name="BOHIO Owner Properties">
        <t t-call="bohio_real_estate.mybohio_portal_layout">
            <div class="mybohio-properties-owner">
                <div class="row mb-4">
                    <div class="col-12">
                        <h2>Mis Propiedades</h2>
                        <p class="text-muted">Administra tus inmuebles</p>
                    </div>
                </div>

                <div class="row">
                    <t t-foreach="properties" t-as="prop">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 property-card">
                                <img t-att-src="'/web/image/product.template/%s/image_1920' % prop.id"
                                     class="card-img-top" t-att-alt="prop.name" style="height: 200px; object-fit: cover;"/>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0" t-field="prop.name"/>
                                        <span class="badge bg-secondary" t-esc="prop.default_code"/>
                                    </div>

                                    <p class="text-muted mb-2">
                                        <i class="bi bi-geo-alt-fill"></i>
                                        <t t-esc="prop.address or prop.street"/>
                                    </p>

                                    <!-- Estado de Administración -->
                                    <t t-if="prop.managed_by_bohio">
                                        <div class="alert alert-info py-2 px-3 mb-3">
                                            <small>
                                                <i class="bi bi-shield-fill"></i>
                                                <strong>Administrado por BOHIO</strong>
                                            </small>
                                        </div>
                                    </t>

                                    <!-- Características -->
                                    <div class="property-features mb-3">
                                        <t t-if="prop.num_bedrooms and prop.num_bedrooms > 0">
                                            <span class="badge bg-light text-dark me-1">
                                                <i class="bi bi-bed"></i> <t t-esc="int(prop.num_bedrooms)"/>
                                            </span>
                                        </t>
                                        <t t-if="prop.num_bathrooms and prop.num_bathrooms > 0">
                                            <span class="badge bg-light text-dark me-1">
                                                <i class="bi bi-droplet"></i> <t t-esc="int(prop.num_bathrooms)"/>
                                            </span>
                                        </t>
                                        <t t-if="prop.property_area and prop.property_area > 0">
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-rulers"></i>
                                                <t t-esc="'{:,.0f}'.format(prop.property_area)"/> m²
                                            </span>
                                        </t>
                                    </div>

                                    <!-- Precio -->
                                    <div class="mb-3">
                                        <t t-if="prop.net_price">
                                            <p class="mb-1">
                                                <small class="text-muted">Venta</small><br/>
                                                <strong class="h5"><t t-esc="'${:,.0f}'.format(prop.net_price)"/></strong>
                                            </p>
                                        </t>
                                        <t t-if="prop.net_rental_price">
                                            <p class="mb-1">
                                                <small class="text-muted">Arriendo</small><br/>
                                                <strong class="h6"><t t-esc="'${:,.0f}'.format(prop.net_rental_price)"/>/mes</strong>
                                            </p>
                                        </t>
                                    </div>

                                    <a t-att-href="'/mybohio/owner/property/%s' % prop.id" class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <t t-if="not properties">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle fa-3x mb-3"></i>
                        <p>No tiene propiedades registradas</p>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="mybohio_owner_property_detail" name="BOHIO Owner Property Detail">
        <t t-call="bohio_real_estate.mybohio_portal_layout">
            <div class="mybohio-property-detail-owner">
                <div class="row mb-4">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/mybohio/owner">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/mybohio/owner/properties">Propiedades</a></li>
                                <li class="breadcrumb-item active" t-esc="property.name"/>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="row">
                    <!-- Información Principal -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <img t-att-src="'/web/image/product.template/%s/image_1920' % property.id"
                                 class="card-img-top" style="height: 400px; object-fit: cover;"/>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h2 t-esc="property.name"/>
                                        <p class="text-muted mb-0">
                                            <i class="bi bi-geo-alt-fill"></i>
                                            <t t-esc="property.address or property.street"/>
                                        </p>
                                    </div>
                                    <span class="badge bg-secondary fs-6" t-esc="property.default_code"/>
                                </div>

                                <t t-if="property.managed_by_bohio">
                                    <div class="alert alert-info">
                                        <i class="bi bi-shield-fill"></i>
                                        <strong>Propiedad Administrada por BOHIO</strong>
                                        <p class="mb-0 mt-2">Esta propiedad no puede ser editada desde el portal.</p>
                                    </div>
                                </t>

                                <div class="row mt-4">
                                    <div class="col-md-6">
                                        <h5>Características</h5>
                                        <ul class="list-unstyled">
                                            <li t-if="property.num_bedrooms and property.num_bedrooms > 0">
                                                <i class="bi bi-bed"></i> <strong>Habitaciones:</strong> <t t-esc="int(property.num_bedrooms)"/>
                                            </li>
                                            <li t-if="property.num_bathrooms and property.num_bathrooms > 0">
                                                <i class="bi bi-droplet"></i> <strong>Baños:</strong> <t t-esc="int(property.num_bathrooms)"/>
                                            </li>
                                            <li t-if="property.property_area and property.property_area > 0">
                                                <i class="bi bi-rulers"></i> <strong>Área:</strong> <t t-esc="'{:,.2f}'.format(property.property_area)"/> m²
                                            </li>
                                            <li t-if="property.stratum">
                                                <i class="fa fa-layer-group"></i> <strong>Estrato:</strong>
                                                <t t-esc="dict(property._fields['stratum'].selection).get(property.stratum)"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Valores</h5>
                                        <ul class="list-unstyled">
                                            <li t-if="property.net_price">
                                                <strong>Venta:</strong> $<t t-esc="'{:,.0f}'.format(property.net_price)"/>
                                            </li>
                                            <li t-if="property.net_rental_price">
                                                <strong>Arriendo:</strong> $<t t-esc="'{:,.0f}'.format(property.net_rental_price)"/>/mes
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- Botón Editar (solo si no es administrado por BOHIO) -->
                                <t t-if="can_edit">
                                    <button class="btn btn-warning mt-3" data-bs-toggle="modal" data-bs-target="#editPropertyModal">
                                        <i class="bi bi-pencil"></i> Actualizar Características
                                    </button>
                                </t>
                            </div>
                        </div>

                        <!-- Pagos Recibidos -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Pagos Recibidos</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="payments">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Fecha</th>
                                                    <th>Monto</th>
                                                    <th>Referencia</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="payments" t-as="payment">
                                                    <tr>
                                                        <td><t t-esc="payment.date.strftime('%d/%m/%Y')"/></td>
                                                        <td><strong>$<t t-esc="'{:,.0f}'.format(payment.amount)"/></strong></td>
                                                        <td><small><t t-esc="payment.ref or payment.name"/></small></td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                                <t t-else="">
                                    <p class="text-muted text-center">No hay pagos registrados</p>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar Derecho -->
                    <div class="col-md-4">
                        <!-- Contrato Activo -->
                        <t t-if="contract">
                            <div class="card mb-3">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0"><i class="bi bi-check-circle"></i> Contrato Activo</h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Arrendatario:</strong><br/><t t-esc="contract.partner_id.name"/></p>
                                    <p><strong>Renta Mensual:</strong><br/>
                                        <span class="h5">$<t t-esc="'{:,.0f}'.format(contract.rent or 0)"/></span>
                                    </p>
                                    <p><strong>Vigencia:</strong><br/>
                                        <small>
                                            <t t-esc="contract.date_from.strftime('%d/%m/%Y')"/> -
                                            <t t-esc="contract.date_to.strftime('%d/%m/%Y') if contract.date_to else 'Indefinido'"/>
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="card mb-3">
                                <div class="card-body text-center text-muted">
                                    <i class="bi bi-house-fill fa-3x mb-3"></i>
                                    <p>Propiedad Vacante</p>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Modal Editar Propiedad -->
                <t t-if="can_edit">
                    <div class="modal fade" id="editPropertyModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <form method="POST" t-att-action="'/mybohio/owner/property/%s/update' % property.id">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="modal-header">
                                        <h5 class="modal-title">Actualizar Características</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"/>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Habitaciones</label>
                                                <input type="number" class="form-control" name="num_bedrooms"
                                                       t-att-value="property.num_bedrooms"/>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Baños</label>
                                                <input type="number" class="form-control" name="num_bathrooms"
                                                       t-att-value="property.num_bathrooms"/>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Área (m²)</label>
                                                <input type="number" step="0.01" class="form-control" name="property_area"
                                                       t-att-value="property.property_area"/>
                                            </div>
                                        </div>

                                        <h6 class="mt-3">Amenidades</h6>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="furnished"
                                                           t-att-checked="'checked' if property.furnished else None"/>
                                                    <label class="form-check-label">Amoblado</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="garage"
                                                           t-att-checked="'checked' if property.garage else None"/>
                                                    <label class="form-check-label">Garaje</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="balcony"
                                                           t-att-checked="'checked' if property.balcony else None"/>
                                                    <label class="form-check-label">Balcón</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>