<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mybohio_salesperson_opportunities" name="Salesperson Opportunities">
        <t t-call="bohio_real_estate.mybohio_portal_layout">
            <t t-set="page_name" t-value="'mybohio_salesperson_opportunities'"/>

            <div class="mybohio-opportunities h-100">
                <!-- Header con fondo completo -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="p-4 bg-light rounded-3">
                            <h1 class="text-danger mb-2">
                                <i class="fa fa-handshake"></i> Mis Oportunidades
                            </h1>
                            <p class="text-muted mb-0">Gestiona todas tus oportunidades de venta</p>
                        </div>
                    </div>
                </div>

                <!-- Contenido principal -->
                <div class="row">
                    <div class="col-12">
                        <t t-if="opportunities">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th class="px-4 py-3">Referencia</th>
                                                    <th class="py-3">Cliente</th>
                                                    <th class="py-3">Etapa</th>
                                                    <th class="py-3">Propiedad</th>
                                                    <th class="py-3 text-end">Valor Esperado</th>
                                                    <th class="py-3" style="width: 150px;">Probabilidad</th>
                                                    <th class="py-3">Fecha Límite</th>
                                                    <th class="py-3 text-end px-4">Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="opportunities" t-as="opp">
                                                    <tr class="border-bottom">
                                                        <td class="px-4">
                                                            <span class="badge bg-light text-dark">#<span t-esc="opp.id"/></span>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <strong class="d-block" t-esc="opp.partner_id.name if opp.partner_id else 'Sin cliente'"/>
                                                                <small class="text-muted" t-if="opp.phone">
                                                                    <i class="fa fa-phone fa-xs"></i> <span t-esc="opp.phone"/>
                                                                </small>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span t-if="opp.stage_id.is_won" class="badge bg-success px-3 py-2">
                                                                <i class="fa fa-check-circle"></i> Ganada
                                                            </span>
                                                            <span t-elif="not opp.active" class="badge bg-danger px-3 py-2">
                                                                <i class="fa fa-times-circle"></i> Perdida
                                                            </span>
                                                            <span t-else="" class="badge bg-info px-3 py-2" t-esc="opp.stage_id.name if opp.stage_id else 'Sin etapa'"/>
                                                        </td>
                                                        <td>
                                                            <t t-if="opp.property_ids">
                                                                <i class="fa fa-home text-muted"></i>
                                                                <span t-esc="', '.join(opp.property_ids.mapped('name')[:2])"/>
                                                                <t t-if="len(opp.property_ids) > 2">
                                                                    <span class="badge bg-secondary ms-1">+<t t-esc="len(opp.property_ids) - 2"/></span>
                                                                </t>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">-</span>
                                                            </t>
                                                        </td>
                                                        <td class="text-end">
                                                            <strong class="text-danger" t-esc="'${:,.0f}'.format(opp.expected_revenue)"/>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex align-items-center gap-2">
                                                                <div class="progress flex-grow-1" style="height: 24px;">
                                                                    <div t-attf-class="progress-bar bg-{{opp.probability >= 75 and 'success' or (opp.probability >= 50 and 'warning' or 'danger')}}"
                                                                         role="progressbar"
                                                                         t-att-style="'width: ' + str(opp.probability) + '%'"
                                                                         t-att-aria-valuenow="opp.probability"
                                                                         aria-valuemin="0" aria-valuemax="100">
                                                                        <small class="fw-bold"><span t-esc="opp.probability"/>%</small>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span t-if="opp.date_deadline">
                                                                <i class="fa fa-calendar text-muted"></i>
                                                                <span t-esc="opp.date_deadline.strftime('%d/%m/%Y')"/>
                                                            </span>
                                                            <span t-else="" class="text-muted">Sin fecha</span>
                                                        </td>
                                                        <td class="text-end px-4">
                                                            <a t-attf-href="/mybohio/salesperson/opportunity/{{opp.id}}"
                                                               class="btn btn-sm btn-danger">
                                                                <i class="fa fa-eye"></i> Ver Detalle
                                                            </a>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- Footer con resumen -->
                                <div class="card-footer bg-light border-top">
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Total Oportunidades</small>
                                            <strong class="fs-5" t-esc="len(opportunities)"/>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Valor Total Esperado</small>
                                            <strong class="fs-5 text-danger" t-esc="'${:,.0f}'.format(sum(opp.expected_revenue for opp in opportunities))"/>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted d-block">Probabilidad Promedio</small>
                                            <strong class="fs-5 text-success" t-esc="'{:.0f}%'.format(sum(opp.probability for opp in opportunities) / len(opportunities) if opportunities else 0)"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center py-5">
                                    <div class="mb-4">
                                        <i class="fa fa-inbox text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
                                    </div>
                                    <h3 class="text-muted">No tienes oportunidades asignadas</h3>
                                    <p class="text-muted mb-4">Las oportunidades que te sean asignadas aparecerán aquí</p>
                                    <a href="/mybohio/salesperson" class="btn btn-danger">
                                        <i class="fa fa-arrow-left"></i> Volver al Dashboard
                                    </a>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
