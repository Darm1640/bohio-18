<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de Plantilla de Préstamo -->
    <record id="view_account_loan_template_form" model="ir.ui.view">
        <field name="name">account.loan.template.form</field>
        <field name="model">account.loan.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Préstamo">
                <header>
                    <button name="action_create_loan_from_template"
                            type="object"
                            string="Crear Préstamo"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_loans"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text">
                            <field name="loan_count" widget="statinfo" string="Préstamos"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Préstamo Personal 12 meses"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Información Básica">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="loan_type" widget="radio"/>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Configuración Financiera">
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="duration"/>
                            <field name="interest_rate"/>
                            <field name="late_payment_rate"/>
                        </group>
                    </group>

                    <group>
                        <group string="Cargos Adicionales">
                            <field name="admin_fee" widget="monetary"/>
                            <field name="insurance_fee" widget="monetary"/>
                        </group>
                        <group string="Facturación">
                            <field name="payment_period"/>
                            <field name="auto_generate_invoices"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Configuración Contable" name="accounting">
                            <group>
                                <group string="Cuentas Contables">
                                    <field name="long_term_account_id"/>
                                    <field name="short_term_account_id"/>
                                    <field name="expense_account_id"/>
                                    <field name="journal_id"/>
                                </group>
                                <group string="Productos para Facturación">
                                    <field name="interest_product_id"/>
                                    <field name="late_fee_product_id"/>
                                    <field name="admin_fee_product_id"/>
                                    <field name="insurance_product_id"/>
                                </group>
                            </group>
                        </page>

                        <page string="Pagos Especiales Predefinidos" name="special_payments">
                            <field name="default_special_payment_ids">
                                <list string="Pagos Especiales" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="payment_type"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="auto_create" widget="boolean_toggle"/>
                                    <field name="notes" optional="hide"/>
                                </list>
                            </field>
                        </page>

                        <page string="Descripción y Notas" name="notes">
                            <group>
                                <field name="description" placeholder="Descripción de la plantilla..."/>
                            </group>
                            <group>
                                <field name="notes" placeholder="Instrucciones de uso, términos y condiciones, etc..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista de lista de Plantillas -->
    <record id="view_account_loan_template_list" model="ir.ui.view">
        <field name="name">account.loan.template.list</field>
        <field name="model">account.loan.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Préstamo" default_order="sequence, name">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="loan_type" widget="badge" decoration-success="loan_type == 'given'" decoration-info="loan_type == 'received'"/>
                <field name="duration"/>
                <field name="interest_rate" optional="show"/>
                <field name="late_payment_rate" optional="hide"/>
                <field name="payment_period" optional="show"/>
                <field name="admin_fee" optional="hide" widget="monetary"/>
                <field name="insurance_fee" optional="hide" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="loan_count" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Vista kanban de Plantillas -->
    <record id="view_account_loan_template_kanban" model="ir.ui.view">
        <field name="name">account.loan.template.kanban</field>
        <field name="model">account.loan.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="loan_type"/>
                <field name="duration"/>
                <field name="interest_rate"/>
                <field name="payment_period"/>
                <field name="loan_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <span t-if="record.loan_type.raw_value == 'given'" class="badge text-bg-success">Otorgado</span>
                                        <span t-if="record.loan_type.raw_value == 'received'" class="badge text-bg-info">Recibido</span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Duración:</span>
                                        <field name="duration"/> meses
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Interés:</span>
                                        <field name="interest_rate"/>%
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-12">
                                        <span class="text-muted">Período:</span>
                                        <field name="payment_period"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge text-bg-secondary">
                                        <i class="fa fa-file-text"/> <field name="loan_count"/> préstamos
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <button name="action_create_loan_from_template"
                                            type="object"
                                            class="btn btn-primary btn-sm">
                                        <i class="fa fa-plus"/> Crear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_account_loan_template_search" model="ir.ui.view">
        <field name="name">account.loan.template.search</field>
        <field name="model">account.loan.template</field>
        <field name="arch" type="xml">
            <search string="Buscar Plantillas">
                <field name="name" string="Nombre"/>
                <field name="description"/>
                <separator/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Préstamos Otorgados" name="given" domain="[('loan_type', '=', 'given')]"/>
                <filter string="Préstamos Recibidos" name="received" domain="[('loan_type', '=', 'received')]"/>
                <separator/>
                <filter string="Con Auto-Facturación" name="auto_invoicing" domain="[('auto_generate_invoices', '=', True)]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo" name="group_loan_type" context="{'group_by': 'loan_type'}"/>
                    <filter string="Período de Pago" name="group_period" context="{'group_by': 'payment_period'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para Plantillas de Préstamo -->
    <record id="action_account_loan_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Préstamo</field>
        <field name="res_model">account.loan.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primera plantilla de préstamo!
            </p>
            <p>
                Las plantillas te permiten crear préstamos rápidamente con configuraciones predefinidas.
                Define cuentas, productos, cargos y pagos especiales que se aplicarán automáticamente.
            </p>
        </field>
    </record>

</odoo>
