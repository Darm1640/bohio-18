<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="contacto_page" name="Página de Contacto">
        <t t-call="website.layout">
            <div id="wrap">
                <section class="bg-bohio-black text-white py-5">
                    <div class="container text-center">
                        <h1 class="display-3" style="font-family: 'Arista Pro Bold', sans-serif;">Contáctanos</h1>
                        <p class="lead">Estamos aquí para ayudarte</p>
                    </div>
                </section>

                <section class="py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <h3 class="text-bohio-red mb-4">Información de Contacto</h3>
                                <div class="card border-0 shadow-sm p-4">
                                    <p><i class="fa fa-map-marker text-bohio-red fa-2x mb-3"/></p>
                                    <h5>Oficina Principal</h5>
                                    <p class="text-muted">Cali, Valle del Cauca, Colombia</p>

                                    <p class="mt-4"><i class="fa fa-phone text-bohio-red fa-2x mb-3"/></p>
                                    <h5>Teléfono</h5>
                                    <p class="text-muted">+57 (2) 123 4567</p>

                                    <p class="mt-4"><i class="fa fa-whatsapp text-bohio-red fa-2x mb-3"/></p>
                                    <h5>WhatsApp</h5>
                                    <p class="text-muted">+57 300 000 0000</p>

                                    <p class="mt-4"><i class="fa fa-envelope text-bohio-red fa-2x mb-3"/></p>
                                    <h5>Email</h5>
                                    <p class="text-muted">info@bohio.com.co</p>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <h3 class="text-bohio-red mb-4">Envíanos un Mensaje</h3>
                                <div class="card border-0 shadow-sm p-4">
                                    <p class="text-center">Formulario de contacto próximamente</p>
                                    <a href="/pqrs" class="btn btn-bohio-primary w-100">
                                        <i class="fa fa-send"/> Sistema PQRS
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>