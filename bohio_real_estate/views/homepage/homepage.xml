<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template Homepage BOHIO -->
    <template id="bohio_homepage" name="BOHIO Homepage">
        <t t-call="website.layout">
            <div id="wrap" class="bohio-homepage">
                <!-- Hero Section con Banner Principal -->
                <section class="bohio-hero-section">
                    <div class="container-fluid p-0">
                        <div class="hero-banner position-relative">
                            <img src="/bohio_real_estate/static/src/img/banner-bohio.jpg"
                                 alt="BOHIO Real Estate" class="img-fluid w-100"/>
                            <div class="hero-overlay">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-8 mx-auto text-center text-white">
                                            <h1 class="display-3 fw-bold mb-4">Encuentra tu hogar ideal con BOHIO</h1>
                                            <p class="lead mb-5">Más de 20 años de experiencia en el mercado inmobiliario</p>

                                            <!-- Búsqueda Rápida -->
                                            <div class="quick-search bg-white p-4 rounded shadow">
                                                <form action="/properties" method="get">
                                                    <div class="row g-3">
                                                        <div class="col-md-3">
                                                            <select name="type_service" class="form-select">
                                                                <option value="">Tipo de Servicio</option>
                                                                <option value="sale">Venta</option>
                                                                <option value="rent">Arriendo</option>
                                                                <option value="vacation_rent">Arriendo Vacacional</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <select name="property_type" class="form-select">
                                                                <option value="">Tipo de Inmueble</option>
                                                                <option value="apartment">Apartamento</option>
                                                                <option value="house">Casa</option>
                                                                <option value="commercial">Comercial</option>
                                                                <option value="lot">Lote</option>
                                                                <option value="office">Oficina</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <input type="text" name="city" class="form-control"
                                                                   placeholder="Ciudad o Barrio"/>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <button type="submit" class="btn btn-primary w-100">
                                                                <i class="fa fa-search"/> Buscar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Servicios BOHIO -->
                <section class="bohio-services py-5 bg-light">
                    <div class="container">
                        <h2 class="text-center mb-5">Nuestros Servicios</h2>
                        <div class="row">
                            <!-- Servicio Arriendo -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-key fa-3x text-primary"/>
                                    </div>
                                    <h4>Servicio de Arriendo</h4>
                                    <p>Administración profesional de propiedades en arriendo con garantías y respaldo jurídico.</p>
                                    <a href="/services/arriendo" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>

                            <!-- Servicio Venta -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-home fa-3x text-primary"/>
                                    </div>
                                    <h4>Servicio de Venta</h4>
                                    <p>Asesoría completa en compra y venta de inmuebles con el mejor precio del mercado.</p>
                                    <a href="/services/venta" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>

                            <!-- Servicios Jurídicos -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-balance-scale fa-3x text-primary"/>
                                    </div>
                                    <h4>Servicios Jurídicos</h4>
                                    <p>Asesoría legal especializada en temas inmobiliarios y contratos.</p>
                                    <a href="/services/juridico" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>

                            <!-- Marketing Inmobiliario -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-bullhorn fa-3x text-primary"/>
                                    </div>
                                    <h4>Marketing Inmobiliario</h4>
                                    <p>Estrategias de marketing digital para maximizar la visibilidad de tu propiedad.</p>
                                    <a href="/services/marketing" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>

                            <!-- Negocios Corporativos -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-building fa-3x text-primary"/>
                                    </div>
                                    <h4>Negocios Corporativos</h4>
                                    <p>Soluciones inmobiliarias para empresas y corporaciones.</p>
                                    <a href="/services/negocios" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>

                            <!-- Consigna tu Inmueble -->
                            <div class="col-md-4 mb-4">
                                <div class="service-card h-100 text-center p-4 bg-white rounded shadow-sm">
                                    <div class="service-icon mb-3">
                                        <i class="fa fa-handshake-o fa-3x text-primary"/>
                                    </div>
                                    <h4>Consigna tu Inmueble</h4>
                                    <p>Confianos tu propiedad para venta o arriendo con las mejores condiciones.</p>
                                    <a href="/services/consigna" class="btn btn-outline-primary">Más información</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Propiedades Destacadas -->
                <section class="bohio-featured-properties py-5">
                    <div class="container">
                        <h2 class="text-center mb-5">Propiedades Destacadas</h2>
                        <div class="row" id="featured-properties">
                            <!-- Se cargarán dinámicamente las propiedades -->
                        </div>
                        <div class="text-center mt-4">
                            <a href="/properties" class="btn btn-primary btn-lg">Ver todas las propiedades</a>
                        </div>
                    </div>
                </section>

                <!-- Clientes -->
                <section class="bohio-clients py-5 bg-light">
                    <div class="container">
                        <h2 class="text-center mb-5">Portal de Clientes</h2>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="client-card h-100 p-5 bg-white rounded shadow">
                                    <h3 class="mb-4">Propietarios</h3>
                                    <p>Accede a tu portal exclusivo para gestionar tus propiedades y revisar estados de cuenta.</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-check text-success"/> Estados de cuenta en línea</li>
                                        <li><i class="fa fa-check text-success"/> Seguimiento de arriendos</li>
                                        <li><i class="fa fa-check text-success"/> Reportes mensuales</li>
                                        <li><i class="fa fa-check text-success"/> Soporte dedicado</li>
                                    </ul>
                                    <a href="/clients/owners" class="btn btn-primary">Acceder al Portal</a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="client-card h-100 p-5 bg-white rounded shadow">
                                    <h3 class="mb-4">Arrendatarios</h3>
                                    <p>Portal para arrendatarios con todas las herramientas necesarias para tu comodidad.</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fa fa-check text-success"/> Pago en línea PSE</li>
                                        <li><i class="fa fa-check text-success"/> Solicitud de servicios</li>
                                        <li><i class="fa fa-check text-success"/> PQRS en línea</li>
                                        <li><i class="fa fa-check text-success"/> Documentos digitales</li>
                                    </ul>
                                    <a href="/clients/tenants" class="btn btn-primary">Acceder al Portal</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Testimonios -->
                <section class="bohio-testimonials py-5">
                    <div class="container">
                        <h2 class="text-center mb-5">Lo que dicen nuestros clientes</h2>
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="testimonial-card p-4 bg-white rounded shadow">
                                    <div class="stars mb-3">
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                    </div>
                                    <p class="mb-3">"Excelente servicio y atención. BOHIO me ayudó a encontrar el apartamento perfecto en tiempo récord."</p>
                                    <strong>María González</strong>
                                    <div class="text-muted">Cliente desde 2022</div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="testimonial-card p-4 bg-white rounded shadow">
                                    <div class="stars mb-3">
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                    </div>
                                    <p class="mb-3">"La administración de mi propiedad ha sido impecable. Pagos puntuales y reportes claros."</p>
                                    <strong>Carlos Rodríguez</strong>
                                    <div class="text-muted">Propietario</div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="testimonial-card p-4 bg-white rounded shadow">
                                    <div class="stars mb-3">
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                        <i class="fa fa-star text-warning"/>
                                    </div>
                                    <p class="mb-3">"Profesionalismo y transparencia en todo el proceso de venta. Altamente recomendados."</p>
                                    <strong>Ana Martínez</strong>
                                    <div class="text-muted">Vendedora</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>