<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Equipo de ventas inmobiliarias -->
        <record id="crm_team_real_estate" model="crm.team">
            <field name="name">Equipo Inmobiliaria BOHIO</field>
            <field name="use_leads">True</field>
            <field name="use_opportunities">True</field>
            <field name="alias_name">inmobiliaria</field>
        </record>

        <!-- Configuración de website -->
        <record id="website_bohio_config" model="website">
            <field name="name">BOHIO Real Estate</field>
            <field name="domain">www.bohio.com.co</field>
        </record>

        <!-- Menús del Portal -->
        <record id="portal_menu_opportunities" model="website.menu">
            <field name="name">Mis Oportunidades</field>
            <field name="url">/my/opportunities</field>
            <field name="parent_id" ref="portal.portal_my_home"/>
            <field name="sequence">10</field>
        </record>

        <record id="portal_menu_properties" model="website.menu">
            <field name="name">Mis Propiedades</field>
            <field name="url">/my/properties</field>
            <field name="parent_id" ref="portal.portal_my_home"/>
            <field name="sequence">20</field>
        </record>

        <record id="portal_menu_contracts" model="website.menu">
            <field name="name">Mis Contratos</field>
            <field name="url">/my/contracts</field>
            <field name="parent_id" ref="portal.portal_my_home"/>
            <field name="sequence">30</field>
        </record>

        <record id="portal_menu_payments" model="website.menu">
            <field name="name">Mis Pagos</field>
            <field name="url">/my/payments</field>
            <field name="parent_id" ref="portal.portal_my_home"/>
            <field name="sequence">40</field>
        </record>
    </data>
</odoo>