<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Categorías de Documentos según Ley 820/2003 Colombia -->

        <record id="category_identification" model="property.document.category">
            <field name="name">Identificación</field>
            <field name="code">identification</field>
            <field name="sequence">10</field>
            <field name="color">1</field>
        </record>

        <record id="category_income_proof" model="property.document.category">
            <field name="name">Certificación de Ingresos</field>
            <field name="code">income_proof</field>
            <field name="sequence">20</field>
            <field name="color">3</field>
        </record>

        <record id="category_banking" model="property.document.category">
            <field name="name">Información Bancaria</field>
            <field name="code">banking</field>
            <field name="sequence">30</field>
            <field name="color">4</field>
        </record>

        <record id="category_tax" model="property.document.category">
            <field name="name">Información Tributaria</field>
            <field name="code">tax</field>
            <field name="sequence">40</field>
            <field name="color">5</field>
        </record>

        <record id="category_guarantee" model="property.document.category">
            <field name="name">Garantías/Fianzas</field>
            <field name="code">guarantee</field>
            <field name="sequence">50</field>
            <field name="color">2</field>
        </record>

        <record id="category_contract" model="property.document.category">
            <field name="name">Contrato/Acuerdos</field>
            <field name="code">contract</field>
            <field name="sequence">60</field>
            <field name="color">7</field>
        </record>

        <record id="category_property_docs" model="property.document.category">
            <field name="name">Documentos de Propiedad</field>
            <field name="code">property_docs</field>
            <field name="sequence">70</field>
            <field name="color">9</field>
        </record>

        <record id="category_other" model="property.document.category">
            <field name="name">Otros</field>
            <field name="code">other</field>
            <field name="sequence">99</field>
            <field name="color">0</field>
        </record>

    </data>
</odoo>
