<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA KANBAN BOHIO CRM -->
    <record id="view_crm_lead_kanban_bohio" model="ir.ui.view">
        <field name="name">crm.lead.kanban.bohio</field>
        <field name="model">crm.lead</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_bohio_crm_kanban" sample="1" quick_create="false"
                    js_class="crm_kanban">
                <field name="stage_id"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="expected_revenue"/>
                <field name="recurring_revenue"/>
                <field name="estimated_commission"/>
                <field name="probability"/>
                <field name="company_currency"/>
                <field name="email_from"/>
                <field name="phone"/>
                <field name="tag_ids"/>
                <field name="activity_ids"/>
                <field name="project_id"/>
                <field name="compared_properties_ids"/>
                <field name="color"/>

                <templates>
                    <!-- Header de grupo con métricas globales -->
                    <t t-name="kanban-header">
                        <div class="o_kanban_header p-3">
                            <div class="o_kanban_header_title mb-3">
                                <div class="o_kanban_header_title_name fw-bold fs-5">
                                    <t t-esc="group.value"/>
                                    <span class="badge bg-secondary ms-2"><t t-esc="group.count"/></span>
                                </div>
                            </div>
                            <!-- Métricas Globales de la Etapa -->
                            <div class="o_kanban_header_metrics">
                                <div class="d-flex gap-2 flex-wrap">
                                    <div class="metric-pill bg-primary">
                                        <i class="fa fa-money me-1"/>
                                        <strong>Ingresos:</strong>
                                        <span class="ms-1"><t t-esc="group.aggregates.expected_revenue.value"/></span>
                                    </div>
                                    <div class="metric-pill bg-success">
                                        <i class="fa fa-repeat me-1"/>
                                        <strong>Recurrente:</strong>
                                        <span class="ms-1"><t t-esc="group.aggregates.recurring_revenue.value"/></span>
                                    </div>
                                    <div class="metric-pill bg-warning text-dark">
                                        <i class="fa fa-percent me-1"/>
                                        <strong>Comisión:</strong>
                                        <span class="ms-1"><t t-esc="group.aggregates.estimated_commission.value"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>

                    <t t-name="card">
                        <div class="oe_kanban_global_click o_bohio_kanban_card" t-attf-style="border-left-color: #{kanban_color(record.color.raw_value)}">
                            <!-- Botones de Acción Rápida -->
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Editar</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Eliminar</a>
                                    <div class="dropdown-divider"/>
                                    <a role="menuitem" type="object" name="action_schedule_meeting" class="dropdown-item">
                                        <i class="fa fa-calendar"/> Agendar Reunión
                                    </a>
                                    <a role="menuitem" type="object" name="action_make_call" class="dropdown-item">
                                        <i class="fa fa-phone"/> Llamar
                                    </a>
                                    <a role="menuitem" type="object" name="action_send_email" class="dropdown-item">
                                        <i class="fa fa-envelope"/> Enviar Email
                                    </a>
                                    <div class="dropdown-divider"/>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <!-- Header con nombre y tags -->
                            <div class="o_kanban_card_header mb-2">
                                <strong class="o_kanban_record_title d-block text-truncate">
                                    <field name="name"/>
                                </strong>
                                <div class="mt-1">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                            </div>

                            <!-- Info del Cliente -->
                            <div class="o_bohio_client_info mb-2">
                                <div class="client-name fw-bold mb-1">
                                    <i class="fa fa-user text-primary me-1"/> <field name="partner_id"/>
                                </div>
                                <t t-if="record.email_from.raw_value">
                                    <div class="client-contact text-muted small">
                                        <i class="fa fa-envelope me-1"/>
                                        <span class="text-truncate"><t t-esc="record.email_from.value"/></span>
                                    </div>
                                </t>
                                <t t-if="record.phone.raw_value">
                                    <div class="client-contact text-muted small">
                                        <i class="fa fa-phone me-1"/>
                                        <t t-esc="record.phone.value"/>
                                    </div>
                                </t>
                            </div>

                            <!-- Proyecto y Propiedades -->
                            <div class="o_bohio_project_info mb-2">
                                <t t-if="record.project_id.raw_value">
                                    <div class="project-badge mb-1">
                                        <span class="badge bg-info">
                                            <i class="fa fa-building-o me-1"/> <field name="project_id"/>
                                        </span>
                                    </div>
                                </t>
                                <t t-if="record.compared_properties_ids.raw_value">
                                    <div class="properties-badge">
                                        <span class="badge bg-secondary">
                                            <i class="fa fa-home me-1"/>
                                            <t t-esc="record.compared_properties_ids.raw_value.length"/> Propiedades
                                        </span>
                                    </div>
                                </t>
                            </div>

                            <!-- Métricas Financieras -->
                            <div class="o_bohio_financial_metrics mb-2">
                                <div class="d-flex gap-1 mb-2">
                                    <div class="metric-item metric-revenue flex-fill">
                                        <div class="metric-label">Ingreso</div>
                                        <div class="metric-value">
                                            <field name="expected_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                        </div>
                                    </div>
                                    <div class="metric-item metric-recurring flex-fill">
                                        <div class="metric-label">Recurrente</div>
                                        <div class="metric-value">
                                            <field name="recurring_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="metric-commission text-center p-1 rounded">
                                    <span class="label small">Comisión:</span>
                                    <strong class="ms-1">
                                        <field name="estimated_commission" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                                    </strong>
                                </div>
                            </div>

                            <!-- Barra de probabilidad -->
                            <div class="o_bohio_probability mb-2">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="probability-label small text-muted">Probabilidad</span>
                                    <span class="probability-value small fw-bold"><t t-esc="record.probability.value"/>%</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar" role="progressbar"
                                         t-attf-class="progress-bar bg-#{record.probability.raw_value &gt;= 75 ? 'success' : record.probability.raw_value &gt;= 50 ? 'info' : record.probability.raw_value &gt;= 25 ? 'warning' : 'danger'}"
                                         t-attf-style="width: #{record.probability.value}%"
                                         t-att-aria-valuenow="record.probability.value"
                                         aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>

                            <!-- Footer con actividades y usuario -->
                            <div class="o_kanban_card_footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="o_kanban_footer_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="o_kanban_footer_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VISTA LIST BOHIO CRM -->
    <record id="view_crm_lead_list_bohio" model="ir.ui.view">
        <field name="name">crm.lead.list.bohio</field>
        <field name="model">crm.lead</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Oportunidades" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email_from"/>
                <field name="stage_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="expected_revenue" widget="monetary"/>
                <field name="probability" widget="progressbar"/>
            </list>
        </field>
    </record>

    <!-- VISTA CALENDAR BOHIO CRM -->
    <record id="view_crm_lead_calendar_bohio" model="ir.ui.view">
        <field name="name">crm.lead.calendar.bohio</field>
        <field name="model">crm.lead</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <calendar string="Calendario" date_start="date_deadline" color="user_id" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
            </calendar>
        </field>
    </record>

</odoo>
