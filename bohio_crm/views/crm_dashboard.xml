<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ====================================================================== -->
    <!-- DASHBOARD CRM BOHIO - VENDEDORES -->
    <!-- ====================================================================== -->
    <!--
        Dashboard personalizado para vendedores inmobiliarios

        Características:
        - Barra de filtros horizontal deslizable (overflow-x: scroll)
        - KPIs: Oportunidades, Ganadas, Pipeline, Tasa de Conversión
        - Embudo de ventas con análisis
        - Contratos por estado
        - Proyección financiera de comisiones
        - Propiedades asociadas
        - Mensajes recientes del chatter
        - Listado de propiedades recientes
        - Mapa interactivo de propiedades

        JavaScript:
        - Componente: CrmSalespersonDashboard
        - Archivo: bohio_crm/static/src/js/crm_salesperson_dashboard.js
        - Template: bohio_crm/static/src/xml/crm_salesperson_dashboard.xml
        - Modelo Python: crm.salesperson.dashboard
    -->
    <record id="action_crm_salesperson_dashboard_client" model="ir.actions.client">
        <field name="name">Dashboard CRM BOHIO</field>
        <field name="tag">crm_salesperson_dashboard</field>
        <field name="target">main</field>
    </record>
</odoo>
