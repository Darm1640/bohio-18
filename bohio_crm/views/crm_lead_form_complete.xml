<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA FORM ÚNICA BOHIO CRM - CHATTER EN EL CENTRO -->
    <record id="view_crm_lead_form_bohio_complete" model="ir.ui.view">
        <field name="name">crm.lead.form.bohio.complete</field>
        <field name="model">crm.lead</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Oportunidad Inmobiliaria">
                <!-- Header con botones de acción -->
                <header>
                    <button name="action_set_won_rainbowman" string="Ganada" type="object"
                            class="oe_highlight" invisible="active == False or probability == 100"
                            data-hotkey="w"/>
                    <button name="action_set_lost" string="Perdida" type="object"
                            invisible="active == False or probability == 0"
                            data-hotkey="l"/>
                    <button name="action_schedule_meeting" string="Agendar Reunión" type="object" icon="fa-calendar"/>
                    <button name="toggle_active" string="Archivar" type="object" invisible="active == False"/>
                    <button name="toggle_active" string="Desarchivar" type="object" class="oe_highlight" invisible="active == True"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"
                           domain="['|', ('team_id', '=', False), ('team_id', '=', team_id)]"/>
                </header>

                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_compared_properties" icon="fa-balance-scale">
                            <field string="Comparar" name="compared_properties_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_partner_contracts" icon="fa-file-text-o"
                                invisible="not partner_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Contratos</span>
                            </div>
                        </button>
                    </div>

                    <!-- Título -->
                    <div class="oe_title">
                        <h1><field name="name" placeholder="ej. Juan Pérez - Apartamento Centro"/></h1>
                        <h3>
                            <field name="partner_id" placeholder="Cliente"
                                   context="{'default_is_company': type == 'opportunity', 'show_vat': True}"/>
                        </h3>
                    </div>

                    <!-- Campos ocultos -->
                    <field name="type" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="probability" invisible="1"/>
                    <field name="company_currency" invisible="1"/>
                    <field name="compared_properties_count" invisible="1"/>

                    <!-- Layout: Izquierda | Centro (Chatter) | Derecha -->
                    <div class="row">
                        <!-- COLUMNA IZQUIERDA (30%) -->
                        <div class="col-md-3">
                            <!-- Información Básica -->
                            <group string="Información Básica">
                                <field name="client_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="service_interested" required="1"/>
                                <field name="user_id" domain="[('share', '=', False)]"/>
                                <field name="team_id"/>
                                <field name="date_deadline" widget="date"/>
                            </group>

                            <!-- Contacto -->
                            <group string="Contacto">
                                <field name="email_from" widget="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                            </group>

                            <!-- Actividades -->
                            <group string="Actividades">
                                <field name="priority" widget="priority" nolabel="1"/>
                                <field name="activity_ids" widget="mail_activity" nolabel="1"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Etiquetas" nolabel="1"/>
                            </group>

                            <!-- Métricas Financieras -->
                            <group string="Métricas">
                                <field name="expected_revenue" widget="monetary"/>
                                <field name="recurring_revenue" widget="monetary"/>
                                <field name="estimated_commission" widget="monetary"/>
                                <field name="commission_percentage" widget="percentage"/>
                            </group>
                        </div>

                        <!-- COLUMNA CENTRO (40%) - CHATTER -->
                        <div class="col-md-6">
                            <group string="Comunicación">
                                <chatter/>
                            </group>
                        </div>

                        <!-- COLUMNA DERECHA (30%) -->
                        <div class="col-md-3">
                            <!-- Proyecto -->
                            <group string="Proyecto">
                                <field name="project_id"/>
                            </group>

                            <!-- Propiedades -->
                            <group string="Propiedades">
                                <field name="property_ids" widget="many2many_tags" nolabel="1"/>
                                <separator string="Comparar (Máx 4)"/>
                                <field name="compared_properties_ids" nolabel="1" domain="[('is_property', '=', True)]">
                                    <list string="Propiedades Comparadas" limit="4" editable="bottom">
                                        <field name="default_code"/>
                                        <field name="name"/>
                                        <field name="list_price" widget="monetary"/>
                                    </list>
                                </field>
                                <button name="action_view_compared_properties" type="object"
                                        string="Comparador" icon="fa-balance-scale" class="btn-primary"/>
                            </group>

                            <!-- Preferencias de Búsqueda -->
                            <group string="Preferencias">
                                <field name="desired_city"/>
                                <field name="desired_neighborhood"/>
                                <field name="desired_property_type_id"/>
                                <label for="budget_min" string="Presupuesto"/>
                                <div class="o_row">
                                    <field name="budget_min" widget="monetary"/>
                                    <span>-</span>
                                    <field name="budget_max" widget="monetary"/>
                                </div>
                                <label for="min_bedrooms" string="Habitaciones"/>
                                <div class="o_row">
                                    <field name="min_bedrooms"/>
                                    <span>-</span>
                                    <field name="ideal_bedrooms"/>
                                </div>
                                <field name="min_bathrooms"/>
                                <label for="min_area" string="Área (m²)"/>
                                <div class="o_row">
                                    <field name="min_area"/>
                                    <span>-</span>
                                    <field name="max_area"/>
                                </div>
                            </group>

                            <!-- Información Adicional -->
                            <group string="Adicional">
                                <field name="has_pets"/>
                                <field name="pet_type" invisible="not has_pets"/>
                                <field name="requires_parking"/>
                                <field name="parking_spots" invisible="not requires_parking"/>
                                <field name="property_purpose"/>
                            </group>
                        </div>
                    </div>

                    <!-- Sección expandible: Más Información -->
                    <notebook>
                        <page string="Detalles Cliente">
                            <group>
                                <group>
                                    <field name="referred_by_partner_id"/>
                                    <field name="occupation"/>
                                    <field name="monthly_income" widget="monetary"/>
                                    <field name="number_of_occupants"/>
                                </group>
                                <group>
                                    <field name="requires_gym"/>
                                    <field name="requires_pool"/>
                                    <field name="requires_common_areas"/>
                                    <field name="requires_security"/>
                                    <field name="requires_elevator"/>
                                </group>
                            </group>
                        </page>

                        <page string="Información Contractual" invisible="not contract_id">
                            <group>
                                <group>
                                    <field name="contract_id"/>
                                    <field name="contract_start_date"/>
                                    <field name="contract_duration_months"/>
                                    <field name="estimated_monthly_rent" widget="monetary"/>
                                    <field name="estimated_total_amount" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="total_invoiced" widget="monetary"/>
                                    <field name="total_paid" widget="monetary"/>
                                    <field name="total_pending" widget="monetary"/>
                                    <field name="payment_percentage" widget="percentage"/>
                                </group>
                            </group>
                        </page>

                        <page string="PQRS" invisible="not pqrs_type">
                            <group>
                                <group>
                                    <field name="pqrs_type"/>
                                    <field name="pqrs_status"/>
                                    <field name="response_deadline"/>
                                </group>
                                <group>
                                    <field name="helpdesk_ticket_id"/>
                                </group>
                            </group>
                            <field name="pqrs_description" placeholder="Descripción detallada del PQRS..."/>
                        </page>

                        <page string="Notas Internas">
                            <field name="description" placeholder="Notas internas sobre el cliente y sus preferencias..."/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
