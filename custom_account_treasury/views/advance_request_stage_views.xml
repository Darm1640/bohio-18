<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista List de Etapas -->
    <record id="view_advance_request_stage_list" model="ir.ui.view">
        <field name="name">advance.request.stage.list</field>
        <field name="model">advance.request.stage</field>
        <field name="arch" type="xml">
            <list string="Etapas de Solicitud" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="is_done" widget="boolean_toggle"/>
                <field name="fold" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista Form de Etapas -->
    <record id="view_advance_request_stage_form" model="ir.ui.view">
        <field name="name">advance.request.stage.form</field>
        <field name="model">advance.request.stage</field>
        <field name="arch" type="xml">
            <form string="Etapa de Solicitud">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="is_default"/>
                            <field name="is_done"/>
                            <field name="fold"/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search de Etapas -->
    <record id="view_advance_request_stage_search" model="ir.ui.view">
        <field name="name">advance.request.stage.search</field>
        <field name="model">advance.request.stage</field>
        <field name="arch" type="xml">
            <search string="Buscar Etapas">
                <field name="name"/>
                
            </search>
        </field>
    </record>

    <!-- Acción para Etapas -->
    <record id="action_advance_request_stage" model="ir.actions.act_window">
        <field name="name">Etapas de Solicitud</field>
        <field name="res_model">advance.request.stage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva etapa de solicitud
            </p>
            <p>
                Configure las etapas para el flujo de aprobación de solicitudes de anticipo.
                Puede crear diferentes etapas para cada tipo de solicitud.
            </p>
        </field>
    </record>

    <!-- Menú para Etapas (dentro de Configuración) -->
    <menuitem id="menu_advance_request_stage"
              name="Etapas de Solicitud"
              parent="custom_account_treasury.menu_treasury_administration"
              action="action_advance_request_stage"
              sequence="5"/>

</odoo>