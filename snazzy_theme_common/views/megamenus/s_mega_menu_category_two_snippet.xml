<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="s_mega_menu_category_two_snippet" name="Category : Mega Menu Two" groups="base.group_user">
		<section class="s_mega_menu_category_two_snippet py-3 snazzy_mega_menu">
			<div class="container extended-container">
				<div class="row align-items-center">
                    <div class="col-lg-8 align-self-center mb16">
						<div class="row">
							<t
                                t-set="categories"
                                t-value="request.env['product.public.category'].search([
                                    ('parent_id', '=', False)
                                ])[:4]"
                            />
                            <t t-foreach="categories" t-as="category">
                                <div class="col-12 col-lg-3 pt16 pb24">
                                    <div class="o_default_snippet_text text-uppercase h5 fw-bold mt-0 heading-contents">
                                        <a
                                            t-att-href="'/shop/category/%s' % category.id"
                                            class="nav-link o_default_snippet_text p-0 text-black menuheading"
                                            t-esc="category.name"
                                        />
                                    </div>
                                    <nav class="nav flex-column">
                                        <t t-foreach="category.child_id" t-as="sub_category">
                                            <a t-att-href="'/shop/category/%s' % sub_category.id"
                                                class="nav-link o_default_snippet_text px-0"
                                                t-esc="sub_category.name"/>
                                        </t>
                                    </nav>
                                </div>
                            </t>
						</div>
					</div>
					<div class="col-lg-4 image pt16 pb16">
						<div class="right-img">
							<!-- <img src="/theme_snazzy/static/src/img/megamenu2.jpg" class="img img-fluid w-100"/> -->
                            <div class="oe_structure oe_empty">
                                <section class="s_text_block" style="background-image: none;">
                                    <div class="container s_allow_columns">
                                        <div class="oe_structure oe_empty" data-editor-message="DRAG BUILDING BLOCKS HERE"/>
                                    </div>
                                </section>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</template>
</odoo>