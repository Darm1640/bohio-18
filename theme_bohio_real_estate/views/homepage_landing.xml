<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- HOMEPAGE LANDING - BOHÍO CONSULTORES -->
    <!-- ========================================== -->
    <template id="bohio_homepage_landing" name="Bohío Homepage Landing">
        <t t-call="website.layout">
            <t t-set="additional_title">Inicio</t>

            <div id="wrap" class="bohio_homepage_landing">

                <!-- HERO SECTION -->
                <header class="hero-section">
                    <div class="hero-bg">
                        <t t-if="website.homepage_image">
                            <img t-att-src="'/web/image/website/%s/homepage_image' % website.id" alt="Hero Background"/>
                        </t>
                    </div>
                    <div class="hero-overlay"/>

                    <div class="container hero-inner">
                        <div class="hero-content">
                            <h1 class="hero-title">
                                Encuentra la <strong>propiedad perfecta</strong> para ti
                            </h1>
                            <p class="hero-subtitle">
                                En Bohío, trabajamos con <strong>transparencia</strong>, <strong>compromiso</strong> y
                                <strong>experiencia</strong> para que tomes <strong>decisiones seguras</strong>.
                            </p>

                            <!-- TABS ARRENDAR/COMPRAR -->
                            <div class="search-tabs">
                                <button class="tab-btn active" id="tabArr" data-type="rent">
                                    Arrendar
                                </button>
                                <button class="tab-btn" id="tabComp" data-type="sale">
                                    Comprar
                                </button>
                            </div>

                            <!-- SEARCH BAR -->
                            <form action="/properties" method="GET" class="search-form">
                                <input type="hidden" name="type_service" id="searchType" value="rent"/>

                                <div class="search-bar">
                                    <div class="search-input-group">
                                        <select name="property_type" class="form-select">
                                            <option value="">Tipo de inmueble</option>
                                            <option value="apartment">Apartamento</option>
                                            <option value="house">Casa</option>
                                            <option value="lot">Lote</option>
                                            <option value="office">Oficina</option>
                                            <option value="commercial">Local Comercial</option>
                                        </select>
                                    </div>

                                    <div class="search-input-group">
                                        <select name="city_id" class="form-select">
                                            <option value="">Ciudad</option>
                                            <t t-foreach="cities" t-as="city">
                                                <option t-att-value="city.id" t-esc="city.name"/>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="search-input-group">
                                        <select name="bedrooms" class="form-select">
                                            <option value="">Habitaciones</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4+</option>
                                        </select>
                                    </div>

                                    <button type="submit" class="btn-search">
                                        <img src="/theme_bohio_real_estate/static/src/img/icons/search.png" alt="" class="btn-icon"/> Buscar
                                    </button>
                                </div>
                            </form>

                            <!-- STATS -->
                            <div class="hero-stats">
                                <div class="stat-item">
                                    <strong t-esc="stats.get('total_properties', 0)"/>
                                    <span>Propiedades</span>
                                </div>
                                <div class="stat-item">
                                    <strong t-esc="stats.get('active_contracts', 0)"/>
                                    <span>Contratos Activos</span>
                                </div>
                                <div class="stat-item">
                                    <strong t-esc="stats.get('happy_clients', 0)"/>
                                    <span>Clientes Satisfechos</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- MAIN CONTENT -->
                <main class="main-content">
                    <div class="container">

                        <!-- SECTION: ARRIENDO -->
                        <section class="properties-section">
                            <span class="section-pill">Arriendo</span>
                            <h2 class="section-title">
                                Te <strong>ayudamos</strong> a encontrar el <strong>lugar ideal</strong> para vivir
                            </h2>

                            <div class="properties-grid">
                                <t t-foreach="rent_properties" t-as="prop">
                                    <t t-call="theme_bohio_real_estate.property_card_simple">
                                        <t t-set="property" t-value="prop"/>
                                    </t>
                                </t>
                            </div>

                            <div class="section-footer">
                                <a href="/properties?type_service=rent" class="btn-view-all">
                                    Ver todas las propiedades en arriendo →
                                </a>
                            </div>
                        </section>

                        <!-- SECTION: VENTA USADOS -->
                        <section class="properties-section">
                            <span class="section-pill red-pill">Venta de inmuebles usados</span>
                            <h2 class="section-title">
                                Te ayudamos a encontrar el <strong>hogar</strong> que estás buscando
                            </h2>

                            <div class="properties-grid">
                                <t t-foreach="sale_properties" t-as="prop">
                                    <t t-call="theme_bohio_real_estate.property_card_simple">
                                        <t t-set="property" t-value="prop"/>
                                    </t>
                                </t>
                            </div>

                            <div class="section-footer">
                                <a href="/properties?type_service=sale" class="btn-view-all">
                                    Ver todos los inmuebles en venta →
                                </a>
                            </div>
                        </section>

                        <!-- SECTION: PROYECTOS -->
                        <t t-if="projects">
                            <section class="properties-section">
                                <span class="section-pill">Proyectos en venta</span>
                                <h2 class="section-title">
                                    Invierte hoy en el <strong>futuro</strong> que sueñas
                                </h2>

                                <div class="properties-grid">
                                    <t t-foreach="projects" t-as="prop">
                                        <t t-call="theme_bohio_real_estate.property_card_simple">
                                            <t t-set="property" t-value="prop"/>
                                            <t t-set="is_project" t-value="True"/>
                                        </t>
                                    </t>
                                </div>

                                <div class="section-footer">
                                    <a href="/properties?is_project=1" class="btn-view-all">
                                        Ver todos los proyectos →
                                    </a>
                                </div>
                            </section>
                        </t>

                        <!-- SECTION: TESTIMONIOS -->
                        <section class="testimonials-section">
                            <span class="section-pill red-pill">Testimonios</span>
                            <h2 class="section-title">
                                Ellos ya vivieron la <strong>experiencia bohío</strong>
                            </h2>

                            <div class="testimonials-grid">
                                <!-- Testimonios estáticos o dinámicos desde modelo -->
                                <div class="testimonial-card">
                                    <div class="avatar gradient-1"/>
                                    <div class="testi-content">
                                        <strong>Paula María</strong>
                                        <div class="rating">★★★★★</div>
                                        <p>Excelente acompañamiento en todo el proceso y paciencia para resolver cada duda.</p>
                                    </div>
                                </div>

                                <div class="testimonial-card">
                                    <div class="avatar gradient-2"/>
                                    <div class="testi-content">
                                        <strong>Jose Raúl</strong>
                                        <div class="rating">★★★★☆</div>
                                        <p>Buen servicio, logramos una compra segura y con buena asesoría.</p>
                                    </div>
                                </div>

                                <div class="testimonial-card">
                                    <div class="avatar gradient-3"/>
                                    <div class="testi-content">
                                        <strong>Fer Velez</strong>
                                        <div class="rating">★★★★★</div>
                                        <p>Atención oportuna y gran variedad de opciones.</p>
                                    </div>
                                </div>

                                <div class="testimonial-card">
                                    <div class="avatar gradient-4"/>
                                    <div class="testi-content">
                                        <strong>Carlos Gutiérrez</strong>
                                        <div class="rating">★★★★☆</div>
                                        <p>Muy satisfecho con la experiencia de arriendo y la postventa.</p>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- SECTION: CLIENTES -->
                        <section class="clients-section">
                            <span class="section-pill">Nuestros clientes</span>
                            <h2 class="section-title">
                                Voces que <strong>respaldan</strong> nuestro compromiso
                            </h2>

                            <div class="clients-logos">
                                <!-- Logos de clientes - pueden ser dinámicos -->
                                <div class="logo-box">
                                    <span class="logo-placeholder">Cliente 1</span>
                                </div>
                                <div class="logo-box">
                                    <span class="logo-placeholder">Cliente 2</span>
                                </div>
                                <div class="logo-box">
                                    <span class="logo-placeholder">Cliente 3</span>
                                </div>
                                <div class="logo-box">
                                    <span class="logo-placeholder">Cliente 4</span>
                                </div>
                            </div>
                        </section>

                    </div>
                </main>

            </div>
        </t>
    </template>

    <!-- ========================================== -->
    <!-- COMPONENTE: TARJETA SIMPLE DE PROPIEDAD -->
    <!-- ========================================== -->
    <template id="theme_bohio_real_estate.property_card_simple" name="Property Card Simple">
        <article class="property-card-simple">
            <div class="price-ribbon" t-esc="'$%s' % '{:,.0f}'.format(property.net_rental_price if property.net_rental_price else property.net_price)"/>

            <div class="property-thumb-simple">
                <t t-if="property.image_1920">
                    <img t-att-src="'/web/image/product.template/%s/image_1920' % property.id"
                         t-att-alt="property.name"
                         loading="lazy"/>
                </t>
                <t t-else="">
                    <div class="thumb-placeholder">
                        <svg width="72" height="72" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M3 11l9-8 9 8v9a1 1 0 0 1-1 1h-5v-6H9v6H4a1 1 0 0 1-1-1v-9z"/>
                        </svg>
                    </div>
                </t>

                <t t-if="is_project">
                    <span class="project-badge">Proyecto Nuevo</span>
                </t>
            </div>

            <div class="property-body-simple">
                <strong class="property-name" t-esc="property.name"/>

                <!-- Ubicación: Barrio, Ciudad -->
                <div class="property-location-simple">
                    <t t-if="property.region_id">
                        <img src="/theme_bohio_real_estate/static/src/img/icons/location.png" alt="" class="meta-icon"/> <t t-esc="property.region_id.name"/><t t-if="property.city_id">, <t t-esc="property.city_id.name"/></t>
                    </t>
                    <t t-elif="property.city_id">
                        <img src="/theme_bohio_real_estate/static/src/img/icons/location.png" alt="" class="meta-icon"/> <t t-esc="property.city_id.name"/>
                    </t>
                    <t t-elif="property.city">
                        <img src="/theme_bohio_real_estate/static/src/img/icons/location.png" alt="" class="meta-icon"/> <t t-esc="property.city"/>
                    </t>
                </div>

                <div class="property-meta-simple">
                    <t t-if="property.num_bedrooms">
                        <span><img src="/theme_bohio_real_estate/static/src/img/icons/bedroom.png" alt="" class="meta-icon"/> <t t-esc="property.num_bedrooms"/> Hab.</span>
                    </t>
                    <t t-if="property.property_area">
                        <span><img src="/theme_bohio_real_estate/static/src/img/icons/area.png" alt="" class="meta-icon"/> <t t-esc="property.property_area"/> m²</span>
                    </t>
                    <t t-if="property.num_bathrooms">
                        <span><img src="/theme_bohio_real_estate/static/src/img/icons/bathroom.png" alt="" class="meta-icon"/> <t t-esc="property.num_bathrooms"/> Baños</span>
                    </t>
                </div>

                <a t-attf-href="/property/#{property.id}" class="card-link">
                    Ver detalles →
                </a>
            </div>
        </article>
    </template>

</odoo>
