<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template de Éxito -->
    <template id="property_contact_success" name="Consulta Enviada con Éxito">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container my-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-lg border-0" style="border-radius: 16px;">
                                <div class="card-body text-center p-5">
                                    <!-- Ícono de éxito -->
                                    <div class="mb-4">
                                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center"
                                             style="width: 100px; height: 100px; background: #28a745;">
                                            <i class="fa fa-check text-white" style="font-size: 50px;"></i>
                                        </div>
                                    </div>

                                    <!-- Mensaje principal -->
                                    <h1 class="text-success mb-3">¡Consulta Enviada con Éxito!</h1>
                                    <p class="lead text-muted mb-4">
                                        Gracias por tu interés en <strong t-esc="property.name"/>
                                    </p>

                                    <!-- Información de seguimiento -->
                                    <div class="alert alert-light border mb-4">
                                        <p class="mb-2">
                                            <i class="fa fa-info-circle text-primary me-2"/>
                                            Hemos creado una oportunidad en nuestro sistema.
                                        </p>
                                        <p class="mb-0 small text-muted">
                                            <strong>Referencia:</strong> <span t-esc="lead.name"/>
                                        </p>
                                    </div>

                                    <!-- Siguiente paso -->
                                    <div class="bg-light p-4 rounded mb-4">
                                        <h5 class="mb-3">¿Qué sigue?</h5>
                                        <ul class="list-unstyled text-start mb-0">
                                            <li class="mb-2">
                                                <i class="fa fa-check-circle text-success me-2"/>
                                                Nuestro equipo recibirá tu consulta inmediatamente
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check-circle text-success me-2"/>
                                                Un asesor se pondrá en contacto contigo en las próximas 24 horas
                                            </li>
                                            <li class="mb-2" t-if="lead.ideal_visit_date">
                                                <i class="fa fa-calendar-check text-success me-2"/>
                                                Confirmaremos tu visita programada para <strong t-esc="lead.ideal_visit_date.strftime('%d/%m/%Y %H:%M')"/>
                                            </li>
                                            <li class="mb-0">
                                                <i class="fa fa-check-circle text-success me-2"/>
                                                Te enviaremos un correo de confirmación
                                            </li>
                                        </ul>
                                    </div>

                                    <!-- Botones de acción -->
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <a t-attf-href="/properties/#{property.id}" class="btn btn-outline-primary">
                                            <i class="fa fa-arrow-left me-2"/>Ver Propiedad
                                        </a>
                                        <a href="/properties" class="btn text-white" style="background: #E31E24; border: none;">
                                            <i class="fa fa-search me-2"/>Explorar Más Propiedades
                                        </a>
                                    </div>

                                    <!-- Contacto directo -->
                                    <hr class="my-4"/>
                                    <p class="text-muted mb-0">
                                        <small>
                                            ¿Necesitas atención inmediata? Llámanos al
                                            <a href="tel:+573001234567" class="text-decoration-none fw-bold">+57 300 123 4567</a>
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template de Error -->
    <template id="property_contact_error" name="Error en Consulta">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container my-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-lg border-0" style="border-radius: 16px;">
                                <div class="card-body text-center p-5">
                                    <!-- Ícono de error -->
                                    <div class="mb-4">
                                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center"
                                             style="width: 100px; height: 100px; background: #dc3545;">
                                            <i class="fa fa-exclamation-triangle text-white" style="font-size: 50px;"></i>
                                        </div>
                                    </div>

                                    <!-- Mensaje principal -->
                                    <h1 class="text-danger mb-3">Ocurrió un Error</h1>
                                    <p class="lead text-muted mb-4">
                                        No pudimos procesar tu solicitud en este momento.
                                    </p>

                                    <!-- Mensaje de error específico -->
                                    <div class="alert alert-danger mb-4" t-if="error">
                                        <i class="fa fa-info-circle me-2"/>
                                        <span t-esc="error"/>
                                    </div>

                                    <!-- Sugerencias -->
                                    <div class="bg-light p-4 rounded mb-4">
                                        <h5 class="mb-3">Te sugerimos:</h5>
                                        <ul class="list-unstyled text-start mb-0">
                                            <li class="mb-2">
                                                <i class="fa fa-check text-primary me-2"/>
                                                Verificar que completaste todos los campos obligatorios
                                            </li>
                                            <li class="mb-2">
                                                <i class="fa fa-check text-primary me-2"/>
                                                Revisar que el correo electrónico sea válido
                                            </li>
                                            <li class="mb-0">
                                                <i class="fa fa-check text-primary me-2"/>
                                                Intentar nuevamente en unos momentos
                                            </li>
                                        </ul>
                                    </div>

                                    <!-- Botones de acción -->
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <a href="javascript:history.back()" class="btn btn-outline-primary">
                                            <i class="fa fa-arrow-left me-2"/>Volver e Intentar de Nuevo
                                        </a>
                                        <a href="/properties" class="btn text-white" style="background: #E31E24; border: none;">
                                            <i class="fa fa-home me-2"/>Ir a Propiedades
                                        </a>
                                    </div>

                                    <!-- Contacto directo -->
                                    <hr class="my-4"/>
                                    <p class="text-muted mb-2">
                                        <strong>¿Necesitas ayuda?</strong>
                                    </p>
                                    <p class="text-muted mb-0">
                                        <small>
                                            Contáctanos directamente al
                                            <a href="tel:+573001234567" class="text-decoration-none fw-bold">+57 300 123 4567</a>
                                            o por WhatsApp al
                                            <a href="https://wa.me/573001234567" target="_blank" class="text-decoration-none fw-bold">
                                                <i class="fa fa-whatsapp"/> +57 300 123 4567
                                            </a>
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
