<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- About Us Page -->
    <template id="about_us_page" name="Sobre Nosotros">
        <t t-call="website.layout">
            <div id="wrap" class="bohio-about-page">
                <!-- Hero Section -->
                <section class="page-hero bg-primary text-white py-5">
                    <div class="container-bohio">
                        <div class="row">
                            <div class="col-lg-8 mx-auto text-center">
                                <h1 class="display-4 fw-bold mb-3">Sobre Nosotros</h1>
                                <p class="lead">Más de 20 años conectando personas con sus hogares ideales</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Company Info -->
                <section class="py-5">
                    <div class="container-bohio">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4 mb-lg-0">
                                <h2 class="mb-4">Nuestra Historia</h2>
                                <p class="mb-3">
                                    BOHIO Real Estate nace en el año 2000 con la visión de revolucionar
                                    el mercado inmobiliario en Colombia, ofreciendo servicios integrales
                                    de la más alta calidad.
                                </p>
                                <p class="mb-3">
                                    Con más de dos décadas de experiencia, nos hemos consolidado como
                                    una de las inmobiliarias más confiables de la región, ayudando a
                                    miles de familias a encontrar su hogar ideal.
                                </p>
                                <p>
                                    Nuestro equipo de profesionales altamente capacitados trabaja con
                                    dedicación y compromiso para brindar la mejor experiencia en cada
                                    transacción inmobiliaria.
                                </p>
                            </div>
                            <div class="col-lg-6">
                                <img src="/theme_bohio_real_estate/static/src/img/about-us.jpg"
                                     alt="Oficina BOHIO"
                                     class="img-fluid rounded shadow-lg"/>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Mission & Vision -->
                <section class="py-5 bg-light">
                    <div class="container-bohio">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 border-0 shadow">
                                    <div class="card-body p-5">
                                        <div class="text-primary mb-3">
                                            <i class="ri-eye-line" style="font-size: 3rem;"></i>
                                        </div>
                                        <h3 class="mb-3">Visión</h3>
                                        <p>
                                            Ser la inmobiliaria líder en Colombia, reconocida por nuestra
                                            excelencia en el servicio, innovación tecnológica y compromiso
                                            con la satisfacción de nuestros clientes.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 border-0 shadow">
                                    <div class="card-body p-5">
                                        <div class="text-primary mb-3">
                                            <i class="ri-target-line" style="font-size: 3rem;"></i>
                                        </div>
                                        <h3 class="mb-3">Misión</h3>
                                        <p>
                                            Conectar personas con espacios que transforman vidas, ofreciendo
                                            servicios inmobiliarios integrales con transparencia, profesionalismo
                                            y tecnología de vanguardia.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Values -->
                <section class="py-5">
                    <div class="container-bohio">
                        <h2 class="text-center mb-5">Nuestros Valores</h2>
                        <div class="row">
                            <div class="col-md-4 mb-4 text-center">
                                <div class="p-4">
                                    <i class="ri-shield-check-line text-primary mb-3" style="font-size: 3rem;"></i>
                                    <h4>Confianza</h4>
                                    <p>Construimos relaciones duraderas basadas en la transparencia y honestidad</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4 text-center">
                                <div class="p-4">
                                    <i class="ri-star-line text-primary mb-3" style="font-size: 3rem;"></i>
                                    <h4>Excelencia</h4>
                                    <p>Nos comprometemos con la calidad en cada detalle de nuestro servicio</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4 text-center">
                                <div class="p-4">
                                    <i class="ri-lightbulb-line text-primary mb-3" style="font-size: 3rem;"></i>
                                    <h4>Innovación</h4>
                                    <p>Utilizamos la tecnología más avanzada para facilitar tu experiencia</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- CTA -->
                <section class="py-5 bg-primary text-white">
                    <div class="container-bohio text-center">
                        <h2 class="mb-4">¿Listo para trabajar con nosotros?</h2>
                        <p class="lead mb-4">Permítenos ayudarte a encontrar tu hogar ideal</p>
                        <a href="/contactus" class="btn btn-light btn-lg px-5">Contáctanos</a>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
