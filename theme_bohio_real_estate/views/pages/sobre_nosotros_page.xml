                <!-- Hero Section -->
                <section class="sobre-nosotros-hero bg-dark text-white py-5 position-relative" style="background: linear-gradient(rgba(227, 30, 36, 0.85), rgba(0,0,0,0.7)), url('/theme_bohio_real_estate/static/src/img/banner2.jpg') center/cover; min-height: 450px;">
