            <!-- Script de Optimización de Performance -->
            <script type="text/javascript">
                // Optimizaciones de performance
                (function() {
                    'use strict';

                    // 1. Usar passive event listeners para touch events
                    if ('addEventListener' in window) {
                        window.addEventListener('touchstart', function() {}, { passive: true });
                        window.addEventListener('touchmove', function() {}, { passive: true });
                    }

                    // 2. Debounce para scroll events
                    let scrollTimeout;
                    function debounceScroll(callback, delay = 100) {
                        return function() {
                            clearTimeout(scrollTimeout);
                            scrollTimeout = setTimeout(callback, delay);
                        };
                    }

                    // 3. Optimizar animaciones usando requestAnimationFrame
                    const animatedElements = document.querySelectorAll('.hover-lift, .card');
                    if (animatedElements.length > 0 &amp;&amp; 'IntersectionObserver' in window) {
                        const observerOptions = {
                            root: null,
                            rootMargin: '50px',
                            threshold: 0.1
                        };

                        const observer = new IntersectionObserver(function(entries) {
                            entries.forEach(function(entry) {
                                if (entry.isIntersecting) {
                                    entry.target.style.willChange = 'transform';
                                    requestAnimationFrame(function() {
                                        entry.target.classList.add('visible');
                                    });
                                } else {
                                    entry.target.style.willChange = 'auto';
                                }
                            });
                        }, observerOptions);

                        animatedElements.forEach(function(el) {
                            observer.observe(el);
                        });
                    }

                    // 4. Lazy load de imágenes con loading="lazy" nativo
                    const images = document.querySelectorAll('img[loading="lazy"]');
                    if ('loading' in HTMLImageElement.prototype) {
                        // Browser soporta lazy loading nativo
                        console.log('Lazy loading nativo habilitado para', images.length, 'imágenes');
                    } else {
                        // Fallback para navegadores que no soportan lazy loading
                        const imageObserver = new IntersectionObserver(function(entries) {
                            entries.forEach(function(entry) {
                                if (entry.isIntersecting) {
                                    const img = entry.target;
                                    if (img.dataset.src) {
                                        img.src = img.dataset.src;
                                        imageObserver.unobserve(img);
                                    }
                                }
                            });
                        });

                        images.forEach(function(img) {
                            imageObserver.observe(img);
                        });
                    }

                    // 5. Optimizar renderizado de background images
                    const heroSection = document.querySelector('.hero-bg');
                    if (heroSection) {
                        // Pre-cargar imagen del hero en baja calidad
                        const bgImage = new Image();
                        bgImage.src = '/theme_bohio_real_estate/static/src/img/quienes-somos.jpg';
                        bgImage.onload = function() {
                            heroSection.style.opacity = '1';
                            heroSection.style.transition = 'opacity 0.3s ease-in-out';
                        };
                    }

                    // 6. Prevenir layout thrashing
                    window.addEventListener('resize', debounceScroll(function() {
                        requestAnimationFrame(function() {
                            // Recalcular layouts solo cuando sea necesario
                            document.body.style.visibility = 'visible';
                        });
                    }, 250));

                })();
            </script>

            <!-- CSS de optimización -->
