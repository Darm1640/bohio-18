                                <li class="nav-item">
                                    <a class="nav-link px-3 fw-semibold" href="/sobre-nosotros">NOSOTROS</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn-contacto px-4 py-2 ms-lg-2" href="/contacto">CONT√ÅCTANOS</a>
                                </li>
                            </ul>

                            <!-- Social Icons -->
                            <div class="social-icons d-none d-lg-flex ms-3">
