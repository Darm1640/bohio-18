<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pantalla de Carga BOHIO -->
    <template id="bohio_page_loader" inherit_id="website.layout" name="BOHIO Page Loader">
        <xpath expr="//body" position="inside">
            <div id="bohio-page-loader">
                <div class="loader-content">
                    <!-- Logo BOHIO Oficial -->
                    <img src="/theme_bohio_real_estate/static/src/img/logo-negro.png"
                         alt="BOHIO Real Estate"
                         class="loader-logo"/>

                    <!-- Spinner -->
                    <div class="loader-spinner"></div>

                    <!-- Texto de carga -->
                    <p class="loader-text">CARGANDO...</p>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
