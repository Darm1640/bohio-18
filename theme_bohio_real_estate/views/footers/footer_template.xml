<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Footer Template BOHIO -->
    <template id="bohio_footer" inherit_id="website.layout" name="Bohio Real Estate Footer">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="bohio-footer bg-dark text-white py-5">
                <div class="container">
                    <div class="row g-4">
                        <!-- Company Info -->
                        <div class="col-lg-3 col-md-6">
                            <h5 class="text-danger mb-3">BOHIO Real Estate</h5>
                            <p class="small">Tu aliado en bienes raíces. Encuentra tu hogar ideal con nosotros.</p>
                            <div class="d-flex gap-3 mt-3">
                                <a href="https://www.instagram.com/bohioinmobiliaria/?hl=es" target="_blank" class="text-white">
                                    <i class="fab fa-instagram fa-lg"></i>
                                </a>
                                <a href="#" class="text-white">
                                    <i class="fab fa-facebook fa-lg"></i>
                                </a>
                                <a href="#" class="text-white">
                                    <i class="fab fa-linkedin fa-lg"></i>
                                </a>
                                <a href="https://bohioconsultores.com/" target="_blank" class="text-white">
                                    <i class="fa fa-globe fa-lg"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Quick Links -->
                        <div class="col-lg-3 col-md-6">
                            <h6 class="text-danger mb-3">Enlaces Rápidos</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2"><a href="/properties" class="text-white text-decoration-none">Propiedades</a></li>
                                <li class="mb-2"><a href="/services" class="text-white text-decoration-none">Servicios</a></li>
                                <li class="mb-2"><a href="/aboutus" class="text-white text-decoration-none">Sobre Nosotros</a></li>
                                <li class="mb-2"><a href="/contactus" class="text-white text-decoration-none">Contacto</a></li>
                            </ul>
                        </div>

                        <!-- Services -->
                        <div class="col-lg-3 col-md-6">
                            <h6 class="text-danger mb-3">Servicios</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2"><a href="/properties?type_service=sale" class="text-white text-decoration-none">Venta</a></li>
                                <li class="mb-2"><a href="/properties?type_service=rent" class="text-white text-decoration-none">Arriendo</a></li>
                                <li class="mb-2"><a href="/services/consign" class="text-white text-decoration-none">Consignar Inmueble</a></li>
                                <li class="mb-2"><a href="/services/legal" class="text-white text-decoration-none">Servicios Jurídicos</a></li>
                            </ul>
                        </div>

                        <!-- Contact -->
                        <div class="col-lg-3 col-md-6">
                            <h6 class="text-danger mb-3">Contacto</h6>
                            <ul class="list-unstyled small">
                                <li class="mb-2">
                                    <i class="fa fa-map-marker-alt me-2"></i>
                                    Barranquilla, Colombia
                                </li>
                                <li class="mb-2">
                                    <i class="fa fa-phone me-2"></i>
                                    +57 300 123 4567
                                </li>
                                <li class="mb-2">
                                    <i class="fa fa-envelope me-2"></i>
                                    info@bohio.com
                                </li>
                            </ul>
                        </div>
                    </div>

                    <hr class="my-4 bg-secondary"/>

                    <div class="row">
                        <div class="col-md-6 text-center text-md-start">
                            <p class="small mb-0">
                                © <t t-out="datetime.datetime.now().year"/> BOHIO Real Estate. Todos los derechos reservados.
                            </p>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <a href="/privacy" class="text-white text-decoration-none small me-3">Privacidad</a>
                            <a href="/terms" class="text-white text-decoration-none small">Términos</a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
