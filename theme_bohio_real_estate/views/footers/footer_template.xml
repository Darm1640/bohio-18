<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Footer Template BOHIO -->
    <template id="bohio_footer" inherit_id="website.layout" name="Bohio Real Estate Footer">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="bohio-footer bg-black text-white py-5">
                <div class="container">
                    <div class="row">
                        <!-- Columna 1: Logo y Descripción -->
                        <div class="col-lg-4 mb-4">
                            <div class="d-flex align-items-center mb-3">
                                <img src="/theme_bohio_real_estate/static/src/img/logo-blanco.png"
                                     alt="BOHIO Logo"
                                     style="max-width: 60px; height: auto; margin-right: 15px;"/>
                                <div>
                                    <h4 class="mb-0" style="font-weight: 700; letter-spacing: 2px;">CONSULTORES</h4>
                                    <p class="mb-0" style="font-size: 14px; font-weight: 500;">Soluciones Inmobiliarias</p>
                                </div>
                            </div>
                            <p class="text-white-50" style="font-size: 14px; line-height: 1.6;">
                                En Bohío, trabajamos con transparencia, compromiso y experiencia para que
                                tomes decisiones seguras. Tu tranquilidad es nuestra mayor prioridad.
                            </p>

                            <!-- Redes Sociales -->
                            <div class="d-flex gap-3 mt-3">
                                <a href="https://www.instagram.com/bohioinmobiliaria/?hl=es"
                                   target="_blank"
                                   class="text-white d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px; border: 1px solid rgba(255,255,255,0.2); border-radius: 50%; transition: all 0.3s;">
                                    <i class="fa fa-instagram fa-lg"></i>
                                </a>
                                <a href="https://www.facebook.com/bohio"
                                   target="_blank"
                                   class="text-white d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px; border: 1px solid rgba(255,255,255,0.2); border-radius: 50%; transition: all 0.3s;">
                                    <i class="fa fa-facebook fa-lg"></i>
                                </a>
                                <a href="https://www.youtube.com/@bohio"
                                   target="_blank"
                                   class="text-white d-flex align-items-center justify-content-center"
                                   style="width: 40px; height: 40px; border: 1px solid rgba(255,255,255,0.2); border-radius: 50%; transition: all 0.3s;">
                                    <i class="fa fa-youtube fa-lg"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Columna 2: Servicios -->
                        <div class="col-lg-2 col-md-4 mb-4">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <a href="/properties?type_service=rent"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Arriendo
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/properties?type_service=sale"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Ventas
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/servicios#captacion"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Captación
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/servicios#avaluos"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Avalúos
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Columna 3: Información -->
                        <div class="col-lg-2 col-md-4 mb-4">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <a href="/faq"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Preguntas Frecuentes
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/about"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Sobre Nosotros
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/blog"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Novedades
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/privacy"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Políticas de Privacidad
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Columna 4: Contacto -->
                        <div class="col-lg-2 col-md-4 mb-4">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <a href="mailto:info@bohio.com"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Email
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/contacto"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Contáctanos
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/pqrs"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        PQRS
                                    </a>
                                </li>
                                <li class="mb-3">
                                    <a href="/terms"
                                       class="text-white text-decoration-none d-block"
                                       style="font-size: 15px; transition: all 0.3s;">
                                        Términos de Servicios
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <!-- Columna 5: Horarios de Atención -->
                        <div class="col-lg-2 col-md-12">
                            <h6 class="text-white fw-bold mb-3" style="font-size: 16px;">Horarios de atención</h6>

                            <div class="mb-3">
                                <p class="text-white mb-1 fw-semibold" style="font-size: 14px;">Lunes a Viernes</p>
                                <p class="text-white-50 mb-0" style="font-size: 13px;">7:30 a 12:00</p>
                                <p class="text-white-50 mb-0" style="font-size: 13px;">2:00 a 6:00</p>
                            </div>

                            <div>
                                <p class="text-white mb-1 fw-semibold" style="font-size: 14px;">Sábados</p>
                                <p class="text-white-50 mb-0" style="font-size: 13px;">8:00 a 12:00</p>
                                <p class="text-white-50 mb-0" style="font-size: 13px;">2:00 a 6:00</p>
                            </div>
                        </div>
                    </div>

                    <!-- Copyright -->
                    <div class="row mt-5 pt-4" style="border-top: 1px solid rgba(255,255,255,0.1);">
                        <div class="col-12 text-center">
                            <p class="text-white-50 mb-0" style="font-size: 13px;">
                                Copyright <t t-out="datetime.datetime.now().year"/>, Bohío Inmobiliaria S.A.S. Todos los derechos reservados
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estilos adicionales para hover -->
            <style>
                .bohio-footer a:hover {
                    color: #E31E24 !important;
                    transform: translateX(5px);
                }

                .bohio-footer .d-flex a:hover {
                    background: #E31E24;
                    border-color: #E31E24 !important;
                    transform: translateY(-3px);
                }
            </style>
        </xpath>
    </template>
</odoo>
