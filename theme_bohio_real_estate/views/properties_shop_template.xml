<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="properties_shop" name="BOHIO Properties Shop">
        <t t-call="website.layout">
            <div id="wrap" class="bohio-shop-page">
                <!-- Contenedor con contexto para JavaScript -->
                <div class="property_search_container" t-att-data-context="search_context or 'public'">

                    <!-- Header con búsqueda principal -->
                    <section class="shop-header bg-white border-bottom py-4">
                        <div class="container">
                            <div class="row align-items-center mb-4">
                                <div class="col-md-6">
                                    <h1 class="mb-0">
                                        <i class="fa fa-search"/> Propiedades
                                    </h1>
                                    <p class="text-muted mb-0 mt-2">
                                        <span id="property-count" class="fw-bold text-danger">0</span> propiedades encontradas
                                    </p>
                                </div>
                                <div class="col-md-6 text-end">
                                    <!-- Botón comparar -->
                                    <button class="btn btn-outline-danger view-comparison" disabled="disabled">
                                        <i class="fa fa-balance-scale"/> Comparar
                                        <span class="badge bg-danger comparison-badge ms-2" style="display: none;">0</span>
                                    </button>
                                </div>
                            </div>

                            <!-- Barra de búsqueda con autocompletado -->
                            <div class="search-bar-container position-relative">
                                <div class="input-group input-group-lg">
                                    <input type="text"
                                           class="form-control property-search-input"
                                           placeholder="Buscar por ciudad, barrio o código..."
                                           autocomplete="off"/>
                                    <select class="form-select subdivision-filter" style="max-width: 200px;">
                                        <option value="all">Buscar todo</option>
                                        <option value="cities">Ciudades</option>
                                        <option value="regions">Barrios</option>
                                        <option value="properties">Propiedades</option>
                                    </select>
                                    <button class="btn btn-danger" type="submit">
                                        <i class="fa fa-search"/> Buscar
                                    </button>
                                </div>
                                <!-- Contenedor de autocompletado -->
                                <div class="autocomplete-container shadow-lg" style="display: none;"></div>
                            </div>
                        </div>
                    </section>

                    <!-- Filtros y resultados -->
                    <section class="shop-content py-4">
                        <div class="container">
                            <div class="row">
                                <!-- Panel de filtros lateral -->
                                <div class="col-lg-3 col-md-4">
                                    <div class="filters-panel card shadow-sm mb-4">
                                        <div class="card-header bg-white">
                                            <h5 class="mb-0"><i class="fa fa-filter"/> Filtros</h5>
                                        </div>
                                        <div class="card-body">
                                            <!-- Tipo de servicio -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Tipo de Servicio</h6>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="service_sale" data-filter="type_service" data-value="sale"/>
                                                    <label class="form-check-label" for="service_sale">Venta</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="service_rent" data-filter="type_service" data-value="rent"/>
                                                    <label class="form-check-label" for="service_rent">Arriendo</label>
                                                </div>
                                            </div>

                                            <!-- Tipo de propiedad -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Tipo de Propiedad</h6>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="type_apartment" data-filter="property_type" data-value="apartment"/>
                                                    <label class="form-check-label" for="type_apartment">Apartamento</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="type_house" data-filter="property_type" data-value="house"/>
                                                    <label class="form-check-label" for="type_house">Casa</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="type_commercial" data-filter="property_type" data-value="commercial"/>
                                                    <label class="form-check-label" for="type_commercial">Comercial</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="type_lot" data-filter="property_type" data-value="lot"/>
                                                    <label class="form-check-label" for="type_lot">Lote</label>
                                                </div>
                                            </div>

                                            <!-- Habitaciones -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Habitaciones</h6>
                                                <select class="form-select property-filter" data-filter="bedrooms">
                                                    <option value="">Cualquiera</option>
                                                    <option value="1">1+</option>
                                                    <option value="2">2+</option>
                                                    <option value="3">3+</option>
                                                    <option value="4">4+</option>
                                                    <option value="5">5+</option>
                                                </select>
                                            </div>

                                            <!-- Baños -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Baños</h6>
                                                <select class="form-select property-filter" data-filter="bathrooms">
                                                    <option value="">Cualquiera</option>
                                                    <option value="1">1+</option>
                                                    <option value="2">2+</option>
                                                    <option value="3">3+</option>
                                                    <option value="4">4+</option>
                                                </select>
                                            </div>

                                            <!-- Rango de precio -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Precio</h6>
                                                <div class="row g-2">
                                                    <div class="col-6">
                                                        <input type="number" class="form-control form-control-sm property-filter" placeholder="Mínimo" data-filter="min_price"/>
                                                    </div>
                                                    <div class="col-6">
                                                        <input type="number" class="form-control form-control-sm property-filter" placeholder="Máximo" data-filter="max_price"/>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Características -->
                                            <div class="filter-group mb-4">
                                                <h6 class="fw-bold">Características</h6>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="has_garage" data-filter="garage" data-value="true"/>
                                                    <label class="form-check-label" for="has_garage">Garaje</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="has_pool" data-filter="pool" data-value="true"/>
                                                    <label class="form-check-label" for="has_pool">Piscina</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="has_garden" data-filter="garden" data-value="true"/>
                                                    <label class="form-check-label" for="has_garden">Jardín</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input property-filter" type="checkbox" id="has_elevator" data-filter="elevator" data-value="true"/>
                                                    <label class="form-check-label" for="has_elevator">Ascensor</label>
                                                </div>
                                            </div>

                                            <!-- Botón limpiar filtros -->
                                            <button class="btn btn-outline-danger w-100 clear-filters">
                                                <i class="fa fa-times"/> Limpiar Filtros
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Área de resultados -->
                                <div class="col-lg-9 col-md-8">
                                    <!-- Tabs: Grid / Mapa -->
                                    <ul class="nav nav-tabs mb-4" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#grid-view" type="button">
                                                <i class="fa fa-th-large"/> Vista Grid
                                            </button>
                                        </li>
                                        <li class="nav-item" role="presentation">
                                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#map-view" type="button">
                                                <i class="fa fa-map-marked-alt"/> Vista Mapa
                                            </button>
                                        </li>
                                    </ul>

                                    <!-- Ordenamiento -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <span class="text-muted">Mostrando <span id="showing-count">0</span> propiedades</span>
                                        </div>
                                        <div>
                                            <select class="form-select form-select-sm property-sort" style="width: auto;">
                                                <option value="relevance">Relevancia</option>
                                                <option value="price_asc">Precio: Menor a Mayor</option>
                                                <option value="price_desc">Precio: Mayor a Menor</option>
                                                <option value="newest">Más Recientes</option>
                                                <option value="area_desc">Área: Mayor a Menor</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Contenido con tabs -->
                                    <div class="tab-content">
                                        <!-- Vista Grid -->
                                        <div class="tab-pane fade show active" id="grid-view" role="tabpanel">
                                            <div class="row g-4" id="properties-grid">
                                                <!-- Las propiedades se cargarán aquí vía JavaScript -->
                                                <div class="col-12 text-center py-5">
                                                    <div class="spinner-border text-danger" role="status">
                                                        <span class="visually-hidden">Cargando...</span>
                                                    </div>
                                                    <p class="text-muted mt-3">Cargando propiedades...</p>
                                                </div>
                                            </div>

                                            <!-- Paginación -->
                                            <nav class="mt-4" id="pagination-container" style="display: none;">
                                                <ul class="pagination justify-content-center"></ul>
                                            </nav>
                                        </div>

                                        <!-- Vista Mapa -->
                                        <div class="tab-pane fade" id="map-view" role="tabpanel">
                                            <div id="properties-map" style="height: 700px; width: 100%; border-radius: 0.5rem;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <!-- Modal de comparación -->
                <div class="modal fade" id="comparisonModal" tabindex="-1">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="fa fa-balance-scale"/> Comparar Propiedades
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body" id="comparison-content">
                                <!-- Contenido de comparación se carga vía JavaScript -->
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger clear-comparison">
                                    <i class="fa fa-times"/> Limpiar Todo
                                </button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
