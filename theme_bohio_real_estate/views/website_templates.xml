<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Homepage Template -->
    <template id="bohio_homepage" name="BOHIO Homepage">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <!-- Hero Section -->
                <section class="s_banner o_cc o_cc2" data-name="Banner">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-7 text-center text-lg-start">
                                <h1 class="display-3 fw-bold">Encuentra tu Hogar Ideal</h1>
                                <p class="lead">Propiedades en venta y arriendo en las mejores zonas</p>
                                <a href="/properties" class="btn btn-primary btn-lg">Ver Propiedades</a>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Featured Properties -->
                <section class="s_features o_cc o_cc1 pt64 pb64" data-name="Features">
                    <div class="container">
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <h2 class="display-4">Propiedades Destacadas</h2>
                                <p class="lead text-muted">Las mejores opciones del momento</p>
                            </div>
                        </div>
                        <div class="row">
                            <t t-foreach="featured_properties" t-as="property">
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100">
                                        <t t-if="property.image_1920">
                                            <img t-att-src="'data:image/png;base64,%s' % property.image_1920.decode('utf-8')"
                                                 class="card-img-top"
                                                 t-att-alt="property.name"
                                                 style="height: 200px; object-fit: cover;"/>
                                        </t>
                                        <div class="card-body">
                                            <h5 class="card-title" t-esc="property.name"/>
                                            <p class="card-text">
                                                <i class="fa fa-map-marker-alt me-2"></i>
                                                <t t-esc="property.city_id.name if property.city_id else 'N/A'"/>
                                            </p>
                                            <p class="text-primary fw-bold fs-4">
                                                $<t t-esc="'{:,.0f}'.format(property.list_price)"/>
                                            </p>
                                            <a t-attf-href="/property/#{property.id}" class="btn btn-outline-primary">
                                                Ver Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <a href="/properties" class="btn btn-secondary btn-lg">Ver Todas las Propiedades</a>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <!-- Property Map View -->
    <template id="property_map_view" name="Property Map View">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container-fluid p-0">
                    <div id="property_map" style="height: 600px; width: 100%;"></div>
                </div>
            </div>
        </t>
    </template>

</odoo>